@page
@model RegisterModel

@{
    ViewData["Title"] = "Đăng ký";
}
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    /* --- 1. CẤU HÌNH BIẾN MÀU (ĐỒNG BỘ LOGIN) --- */
    :root {
        --primary: #0f172a;
        --accent: #8b5cf6;
        --bg-body: #ffffff;
        --card-bg: rgba(255, 255, 255, 0.9);
        --input-bg: #f8fafc;
        --input-border: #cbd5e1;
        --text-def: #0f172a;
    }

    /* DARK MODE SETUP */
    [data-bs-theme="dark"] {
        --bg-body: #020617;
        --card-bg: rgba(15, 23, 42, 0.75);
        --input-bg: rgba(30, 41, 59, 0.6);
        --input-border: #475569;
        --text-def: #ffffff;
    }

    body {
        font-family: 'Plus Jakarta Sans', sans-serif;
        background-color: var(--bg-body);
        transition: all 0.3s ease;
        /* Nền Gradient Mesh y hệt trang Login */
        background-image: radial-gradient(at 0% 0%, rgba(15, 23, 42, 0.2) 0px, transparent 50%), radial-gradient(at 100% 0%, rgba(139, 92, 246, 0.15) 0px, transparent 50%);
        background-attachment: fixed;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .register-card {
        background: var(--card-bg);
        backdrop-filter: blur(24px);
        -webkit-backdrop-filter: blur(24px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        width: 100%;
        max-width: 500px;
        padding: 3rem;
    }

    /* --- 2. XỬ LÝ TEXT (ID ưu tiên cao nhất) --- */
    #reg-header {
        font-weight: 800;
        letter-spacing: -0.5px;
        color: #0f172a;
        transition: color 0.3s;
    }

    #reg-sub {
        color: #64748b;
        font-weight: 500;
    }

    /* ÉP MÀU KHI DARK MODE (BẮT BUỘC TRẮNG) */
    html[data-bs-theme="dark"] #reg-header, [data-bs-theme="dark"] #reg-header {
        color: #ffffff !important;
        text-shadow: 0 2px 10px rgba(0,0,0,0.8);
    }

    html[data-bs-theme="dark"] #reg-sub, [data-bs-theme="dark"] #reg-sub {
        color: #cbd5e1 !important;
    }

    /* --- 3. NÚT ĐĂNG KÝ (STYLE GRADIENT XANH ĐEN) --- */
    .btn-glow {
        background: linear-gradient(135deg, #0f172a 0%, #312e81 100%);
        border: none;
        padding: 14px;
        width: 100%;
        border-radius: 50px;
        font-weight: 800;
        text-transform: uppercase;
        box-shadow: 0 4px 15px rgba(15, 23, 42, 0.4);
        text-shadow: 0 1px 2px rgba(0,0,0,0.5);
        color: #ffffff !important; /* Luôn trắng */
        transition: all 0.3s ease;
    }

        .btn-glow:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #1e293b 0%, #4338ca 100%);
            box-shadow: 0 8px 25px rgba(55, 48, 163, 0.4);
        }

    /* 4. INPUT & LOGO */
    .form-control {
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid var(--input-border);
        background-color: var(--input-bg);
        color: var(--text-def) !important;
    }

        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.2);
        }

    .input-group-text {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        border-right: none;
        border-radius: 12px 0 0 12px;
        color: var(--text-def);
        opacity: 0.7;
    }

    .brand-logo {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
        color: white;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        margin: 0 auto 1.5rem;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .link-primary-custom {
        color: var(--accent);
        text-decoration: none;
        font-weight: 700;
    }

    .btn-toggle {
        border-radius: 0 12px 12px 0 !important;
        color: var(--text-def);
        border-color: var(--input-border);
        background-color: var(--input-bg);
        opacity: 0.7;
    }

    .form-label {
        color: var(--text-def) !important;
        opacity: 0.8;
        font-size: 0.85rem;
        font-weight: 600;
        margin-left: 4px;
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="text-center mb-4">
            <div class="brand-logo"><i class="bi bi-cloud-plus-fill"></i></div>
            <h2 id="reg-header" class="mb-2">Tạo tài khoản mới</h2>
            <p id="reg-sub" class="small">Nhập thông tin chi tiết để bắt đầu.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="••••••••" id="password" autocomplete="new-password" />
                    <button class="btn btn-outline-secondary border-start-0 btn-toggle" type="button" onclick="togglePwd('password', this)">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="••••••••" id="confirm-password" autocomplete="new-password" />
                    <button class="btn btn-outline-secondary border-start-0 btn-toggle" type="button" onclick="togglePwd('confirm-password', this)">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn-glow mb-4" style="color: #ffffff !important;">ĐĂNG KÝ NGAY</button>

            <div class="text-center">
                <p class="small mb-0" style="color: var(--text-def)">Đã có tài khoản? <a asp-page="./Login" style="color: #8b5cf6; font-weight: 700;">Đăng nhập</a></p>
                <a href="/" class="small text-decoration-none mt-2 d-inline-block" style="color: var(--text-def); opacity: 0.7;">
                    <i class="bi bi-arrow-left"></i> Quay lại trang chủ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Hàm ẩn hiện mật khẩu (dùng chung cho cả 2 ô input)
        function togglePwd(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        }

        // Script cưỡng chế màu trắng khi Dark Mode (Bàn tay sắt)
        function forceColors() {
            const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches ||
                           document.documentElement.getAttribute('data-bs-theme') === 'dark';

            // Chọn tất cả các thành phần văn bản
            const elementsToColor = document.querySelectorAll('h2, p:not(.text-danger), label, span:not(.text-danger), i:not(.bi-cloud-plus-fill)');

            if (isDark) {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                elementsToColor.forEach(el => el.style.color = '#ffffff');
            } else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                elementsToColor.forEach(el => el.style.color = '#0f172a');
            }
        }

        // Chạy script
        forceColors();
        window.addEventListener('click', forceColors);
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', forceColors);
    </script>
}