@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@400;700&display=swap" rel="stylesheet" />

<style>
    body {
        background-color: #f6f6f8;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .error-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .error-card {
        max-width: 500px;
        width: 100%;
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.07);
        background: white;
    }

    .icon-box {
        width: 100px;
        height: 100px;
        background-color: rgba(220, 53, 69, 0.1);
        color: #dc3545;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
    }

    .btn-back {
        background-color: #0f172a;
        color: white !important;
        border: none;
        padding: 0.8rem;
        font-weight: 600;
        border-radius: 0.75rem;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background-color: #1e293b;
            transform: translateY(-2px);
        }
</style>

<div class="error-container">
    <div class="card error-card p-5 text-center">
        <div class="icon-box">
            <span class="material-symbols-outlined" style="font-size: 50px;">block</span>
        </div>

        <h2 class="fw-bold text-dark mb-3">Rất tiếc, bạn không có quyền truy cập</h2>

        <p class="text-muted mb-4 px-3">
            Tài khoản của bạn hiện không có quyền vào trang này hoặc đã bị tạm khóa bởi quản trị viên. Vui lòng liên hệ bộ phận hỗ trợ nếu bạn cho rằng đây là một sự nhầm lẫn.
        </p>

        <div class="d-grid gap-2">
            <a href="/" class="btn btn-back">
                Quay lại trang chủ
            </a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-link text-decoration-none fw-bold text-primary small">
                Đăng nhập bằng tài khoản khác
            </a>
        </div>
    </div>
</div>