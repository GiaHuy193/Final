<!DOCTYPE html>
<html lang="vi" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DocNest</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* Theme variables (light and dark) - pages should use these variables */
        :root {
            --primary-color: #258cf4;
            --primary-hover: #1f7ce0;

            /* Light theme */
            --bg-body: #f8f9fa;
            --bg-header: #ffffff;
            --bg-card: #ffffff;
            --text-color: #14171A;
            --text-muted: #6c757d;
            --border-color: #e9ecef;
        }

        [data-bs-theme="dark"] {
            --primary-color: #58a6ff;
            --primary-hover: #2f9bff;

            /* Dark theme */
            --bg-body: #0f1722; /* deep navy */
            --bg-header: #0f1722;
            --bg-card: #112031;
            --text-color: #e6eef6;
            --text-muted: #94a3b8;
            --border-color: #243447;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-color);
            padding-top: var(--nav-height, 70px); /* Tránh nội dung bị đè bởi navbar */
            transition: background-color 0.2s ease, color 0.2s ease;
        }

        /* Modern Navbar */
        .navbar {
            height: var(--nav-height, 70px);
            background: var(--bg-header) !important;
            backdrop-filter: blur(6px);
            border-bottom: 1px solid var(--border-color);
        }

        .navbar-brand {
            font-weight: 800;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
        }

        .search-box {
            background: rgba(0,0,0,0.03);
            border-radius: 12px;
            border: none;
            padding: 8px 15px;
            width: 350px;
            transition: all 0.2s;
            color: var(--text-color);
        }

        .search-box:focus {
            background: var(--bg-header);
            box-shadow: 0 0 0 3px rgba(37, 140, 244, 0.12);
            outline: none;
        }

        /* User Dropdown */
        .user-nav-item {
            border-radius: 12px;
            transition: 0.2s;
            padding: 5px 10px;
        }

        .user-nav-item:hover {
            background: rgba(0,0,0,0.04);
        }

        footer {
            border-top: 1px solid var(--border-color);
            background: var(--bg-header);
        }

        /* small helpers */
        .bg-card { background: var(--bg-card) !important; }
        .text-muted-custom { color: var(--text-muted) !important; }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-md fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-cloud-check-fill fs-2"></i> DocNest
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <form class="d-none d-lg-flex mx-auto" role="search" asp-controller="Documents" asp-action="Search">
                    <div class="position-relative">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input class="search-box ps-5" type="search" placeholder="Tìm kiếm tệp tin, thư mục..." name="query">
                    </div>
                </form>

                <ul class="navbar-nav ms-auto align-items-center gap-2">
                    <li class="nav-item">
                        <button class="btn btn-link text-dark nav-link" id="themeToggle" title="Đổi giao diện">
                            <i class="bi bi-moon-stars-fill"></i>
                        </button>
                    </li>

                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<IdentityUser> SignInManager
                    @inject UserManager<IdentityUser> UserManager

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var user = await UserManager.GetUserAsync(User);
                        var avatarUrl = $"https://ui-avatars.com/api/?name={User.Identity.Name}&background=258cf4&color=fff";

                        <li class="nav-item dropdown">
                            <a class="nav-link d-flex align-items-center gap-2 user-nav-item dropdown-toggle no-caret" href="#" data-bs-toggle="dropdown">
                                <img src="@avatarUrl" class="rounded-circle border" width="35" height="35" style="object-fit: cover;">
                                <span class="fw-bold d-none d-sm-inline">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-4 mt-2 bg-card">
                                <li><a class="dropdown-item mt-2" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person me-2"></i>Hồ sơ cá nhân</a></li>
                                <li><a class="dropdown-item text-danger" href="javascript:document.getElementById('logoutForm').submit()"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                            </ul>
                            <form id="logoutForm" class="d-none" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post"></form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="btn btn-outline-primary rounded-pill px-4 me-2" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="btn btn-primary rounded-pill px-4" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="py-4 mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="text-muted">&copy; 2025 - <b class="text-primary">DocNest</b> Cloud Storage.</span>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <a href="#" class="text-muted text-decoration-none me-3">Chính sách</a>
                    <a href="#" class="text-muted text-decoration-none">Hỗ trợ</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Theme persistence and toggle
        (function(){
            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;

            // Apply saved theme (if any) before user interacts
            const saved = localStorage.getItem('theme');
            if (saved === 'dark' || saved === 'light') {
                html.setAttribute('data-bs-theme', saved);
            }

            function setToggleIcon(theme){
                if (!themeToggle) return;
                if (theme === 'dark') themeToggle.innerHTML = '<i class="bi bi-sun-fill text-warning"></i>';
                else themeToggle.innerHTML = '<i class="bi bi-moon-stars-fill"></i>';
            }

            // initialize icon
            setToggleIcon(html.getAttribute('data-bs-theme') || 'light');

            if (!themeToggle) return;

            themeToggle.addEventListener('click', () => {
                const current = html.getAttribute('data-bs-theme') === 'dark' ? 'dark' : 'light';
                const next = current === 'dark' ? 'light' : 'dark';
                html.setAttribute('data-bs-theme', next);
                localStorage.setItem('theme', next);
                setToggleIcon(next);
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>