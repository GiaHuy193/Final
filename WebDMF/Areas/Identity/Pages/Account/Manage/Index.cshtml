@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    /* --- CSS CỦA BẠN (GIỮ NGUYÊN) --- */
    .profile-container {
        background-color: var(--bg-body);
        color: var(--text-color);
        min-height: 100vh;
        padding: 3rem 0;
    }

    .card {
        background: var(--bg-card);
        color: var(--text-color);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.04);
    }

    .avatar-wrapper {
        position: relative;
        width: 140px;
        height: 140px;
        margin: 0 auto;
    }

    .avatar-main {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 5px solid var(--bg-card);
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        background: var(--bg-card);
    }

    .avatar-edit-icon {
        position: absolute;
        bottom: 8px;
        right: 8px;
        background: var(--primary-color);
        color: white;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 3px solid var(--bg-card);
        cursor: pointer;
        transition: 0.3s;
    }

        .avatar-edit-icon:hover {
            transform: scale(1.1) rotate(15deg);
        }

    .storage-container {
        padding: 20px;
        border-radius: 15px;
        background: var(--bg-card);
    }

    .storage-svg {
        transform: rotate(-90deg);
        filter: drop-shadow(0 0 5px rgba(37, 140, 244, 0.06));
    }

    .storage-text {
        font-size: 1.8rem;
        font-weight: 900;
        color: var(--primary-color);
    }

    .form-label {
        color: var(--text-muted);
        margin-bottom: 8px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        border-radius: 12px;
        padding: 12px 14px;
        border: 1px solid var(--border-color);
        background-color: transparent;
        color: var(--text-color);
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(37, 140, 244, 0.09);
            border-color: var(--primary-color);
        }

    .card .bg-light {
        background-color: rgba(255,255,255,0.03) !important;
        color: var(--text-color) !important;
    }

    .input-group-text {
        background: rgba(255,255,255,0.03);
        color: var(--text-muted);
        border: none;
    }

    .storage-svg circle:nth-child(1) {
        stroke: var(--border-color);
    }

    .storage-svg circle:nth-child(2) {
        stroke: var(--primary-color);
    }

    .progress {
        background-color: rgba(0,0,0,0.04);
    }

        .progress .progress-bar {
            background-color: var(--primary-color);
        }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-upgrade {
        background-color: #111827;
        color: #ffffff;
        border: none;
        transition: all 0.2s;
    }

        .btn-upgrade:hover {
            opacity: 0.95;
            color: white;
            transform: translateY(-2px);
        }
</style>

<div class="profile-container">
    <div class="container">
        <div class="row mb-4 justify-content-center">
            <div class="col-lg-10">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">DocNest</a></li>
                        <li class="breadcrumb-item active">Thiết lập tài khoản</li>
                    </ol>
                </nav>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="fw-bold mb-1">Hồ sơ người dùng</h1>
                        <p class="text-muted mb-0">Quản lý thông tin cá nhân và tài nguyên lưu trữ.</p>
                    </div>
                </div>
            </div>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="profile-form" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row g-4 justify-content-center">

                <div class="col-lg-6">
                    <div class="card p-4 h-100">
                        <div class="text-center mb-4">
                            <div class="avatar-wrapper mb-3">
                                <img id="avatarPreview" src="@Model.AvatarUrl" class="avatar-main" alt="Avatar">
                                <label for="avatarInput" class="avatar-edit-icon" title="Cập nhật ảnh">
                                    <i class="bi bi-camera-fill"></i>
                                </label>
                                <input type="file" id="avatarInput" name="AvatarUpload" accept="image/*" style="display:none" />
                            </div>
                            <h5 class="fw-bold mb-0">@Model.Username</h5>
                            <button type="button" id="removePhotoBtn" class="btn btn-link text-danger text-decoration-none btn-sm fw-bold">Hoàn tác ảnh</button>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Tên đăng nhập</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                    <input asp-for="Username" class="form-control bg-light" disabled />
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope-at-fill"></i></span>
                                    <input type="email" class="form-control bg-light" value="@User.Identity.Name" disabled />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="09xx..." />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Input.Gender" class="form-label"></label>
                                <select asp-for="Input.Gender" class="form-select">
                                    <option value="">-- Chọn --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                                <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                            </div>

                            <div class="col-12 pt-3">
                                <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill fw-bold shadow-sm">
                                    <i class="bi bi-save2-fill me-2"></i>Lưu thay đổi
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card p-4 text-center bg-card border h-100 d-flex flex-column justify-content-center shadow-lg">

                        <div class="mb-4">
                            <h5 class="fw-bold quota-title">Dung lượng DocNest</h5>
                            @if (Model.IsPremium)
                            {
                                <span class="badge bg-warning text-dark rounded-pill px-3 py-2 border border-warning shadow-sm">
                                    <i class="bi bi-star-fill me-1"></i> Gói Premium (VIP)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark border rounded-pill px-3 py-2">Gói miễn phí (Standard)</span>
                            }
                        </div>

                        <div class="position-relative mx-auto my-4" style="width: 200px; height: 200px;">
                            <svg class="storage-svg" width="200" height="200">
                                <circle cx="100" cy="100" r="85" fill="none" stroke="var(--border-color)" stroke-width="15" />
                                <circle cx="100" cy="100" r="85" fill="none" stroke="var(--primary-color)" stroke-width="15"
                                        stroke-dasharray="534" stroke-dashoffset="@(534 - (534 * Model.StoragePercentage / 100))"
                                        stroke-linecap="round" style="transition: stroke-dashoffset 1.5s cubic-bezier(0.4, 0, 0.2, 1);" />
                            </svg>
                            <div class="position-absolute top-50 start-50 translate-middle">
                                <div class="storage-text">@Model.StoragePercentage.ToString("0")%</div>
                                <div class="small fw-bold text-muted">@Model.FormattedUsed</div>
                            </div>
                        </div>

                        <div class="mt-3 px-2 text-start">
                            <div class="d-flex justify-content-between mb-2 small fw-bold">
                                <span class="text-muted">Đã dùng</span>
                                <span>@Model.FormattedUsed / @Model.FormattedTotal</span>
                            </div>
                            <div class="progress mb-4" style="height: 10px; border-radius: 5px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                     style="width: @Model.StoragePercentage%; background-color: var(--primary-color);"></div>
                            </div>

                            <p class="text-center small text-muted fst-italic mb-4">
                                Dữ liệu được tính toán theo thời gian thực.
                            </p>

                            <hr class="opacity-50">

                            <div class="d-grid gap-2">
                                @if (!User.IsInRole("Admin"))
                                {
                                    @if (!Model.IsPremium)
                                    {
                                        <a asp-area="" asp-controller="Payment" asp-action="Premium" class="btn btn-upgrade rounded-pill fw-bold py-2 shadow-sm text-decoration-none">
                                            <i class="bi bi-gem me-2"></i>Nâng cấp gói Premium (100GB)
                                        </a>
                                    }
                                    else
                                    {
                                        <div class="alert alert-success py-2 small fw-bold text-center mb-1">
                                            <i class="bi bi-check-circle-fill"></i> Bạn đang sử dụng Premium
                                        </div>

                                        @* --- NÚT HỦY GÓI ĐƯỢC THÊM VÀO ĐÂY --- *@
                                        <button type="button" class="btn btn-outline-danger rounded-pill fw-bold py-2 border-2" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                            <i class="bi bi-x-circle me-2"></i>Hủy gói Premium
                                        </button>
                                    }

                                    <a asp-page="./ChangePassword" class="btn btn-outline-primary rounded-pill fw-bold py-2 border-2">
                                        <i class="bi bi-shield-lock me-2"></i>Đổi mật khẩu
                                    </a>
                                }
                                else
                                {
                                    <span class="small text-muted text-center">Quản trị viên hệ thống.</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-danger">Xác nhận hủy gói?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="text-warning mb-3">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
                </div>
                <p class="mb-1 fw-bold">Bạn có chắc chắn muốn hủy gói Premium không?</p>
                <p class="text-muted small">
                    Dung lượng lưu trữ sẽ quay về mức <strong>15GB</strong>.
                    <br>Các file vượt quá dung lượng có thể bị khóa.
                </p>
            </div>
            <div class="modal-footer border-0 pt-0 justify-content-center pb-4">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Giữ lại</button>

                <form asp-area="" asp-controller="Payment" asp-action="Downgrade" method="post">
                    <button type="submit" class="btn btn-danger rounded-pill px-4">
                        Đồng ý hủy
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('avatarInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    document.getElementById('avatarPreview').src = event.target.result;
                }
                reader.readAsDataURL(file);
            }
        });

        document.getElementById('removePhotoBtn').addEventListener('click', function() {
            document.getElementById('avatarPreview').src = '@Model.AvatarUrl';
            document.getElementById('avatarInput').value = "";
        });
    </script>
}