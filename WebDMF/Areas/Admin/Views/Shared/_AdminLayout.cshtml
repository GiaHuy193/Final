<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin DocNest</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <style>
        :root {
            --admin-sidebar-bg: #111827; /* Màu Slate 950 */
            --admin-sidebar-hover: #1f2937;
            --admin-primary: #3b82f6; /* Xanh DocNest */
            --admin-bg-light: #f8fafc;
        }

        /* Dark mode overrides when body has .dark-mode */
        body.dark-mode {
            --admin-sidebar-bg: #071026;
            --admin-sidebar-hover: #0f1b2b;
            --admin-primary: #60a5fa;
            --admin-bg-light: #0b1220;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--admin-bg-light);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* --- SIDEBAR --- */
        .sidebar {
            width: 280px;
            height: 100vh;
            background-color: var(--admin-sidebar-bg);
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            transition: all 0.3s;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            text-align: center;
        }

        .sidebar-brand {
            color: white;
            text-decoration: none;
            font-size: 1.5rem;
            font-weight: 800;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .nav-admin {
            padding: 0 1rem;
            flex-grow: 1;
        }

        .nav-admin-link {
            color: #9ca3af;
            text-decoration: none;
            padding: 0.8rem 1rem;
            display: flex;
            align-items: center;
            border-radius: 12px;
            margin-bottom: 5px;
            transition: all 0.2s;
            font-weight: 500;
        }

            .nav-admin-link i {
                font-size: 1.25rem;
                margin-right: 12px;
            }

            .nav-admin-link:hover, .nav-admin-link.active {
                background-color: var(--admin-sidebar-hover);
                color: white;
            }

                .nav-admin-link.active i {
                    color: var(--admin-primary);
                }

        /* --- MAIN CONTENT --- */
        .main-wrapper {
            margin-left: 280px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- TOP NAVBAR --- */
        .top-navbar {
            height: 70px;
            background: white;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            padding: 0 2rem;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        /* when dark-mode, make top-navbar darker */
        body.dark-mode .top-navbar {
            background: #071026;
            border-color: rgba(255,255,255,0.04);
        }

        .content-body {
            padding: 2rem;
            flex-grow: 1;
        }

        /* Search Bar */
        .admin-search {
            background-color: #f1f5f9;
            border: none;
            border-radius: 10px;
            padding: 0.5rem 1rem 0.5rem 2.5rem;
            width: 300px;
            font-size: 0.9rem;
        }

        .search-wrapper {
            position: relative;
        }

            .search-wrapper i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #94a3b8;
            }

        /* Dropdown Profile */
        .profile-dropdown .btn {
            border: none;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 600;
        }

        .profile-dropdown .dropdown-menu {
            border: none;
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            border-radius: 12px;
            padding: 10px;
            min-width: 200px;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .sidebar {
                left: -280px;
            }

            .main-wrapper {
                margin-left: 0;
            }

            .sidebar.show {
                left: 0;
            }
        }
    </style>
</head>
<body>

    <aside class="sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <a href="/" class="sidebar-brand">
                <i class="bi bi-shield-lock-fill text-primary"></i>
                <span>DocNest Admin</span>
            </a>
        </div>

        <nav class="nav-admin">
            <small class="text-uppercase text-muted fw-bold mb-3 d-block px-3" style="font-size: 0.7rem; letter-spacing: 1px;">Menu chính</small>

            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
               class="nav-admin-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-grid-1x2-fill"></i> Tổng quan
            </a>

            <a asp-area="Admin" asp-controller="Dashboard" asp-action="ManageUsers" 
               class="nav-admin-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" && ViewContext.RouteData.Values["Action"]?.ToString() == "ManageUsers" ? "active" : "")">
                <i class="bi bi-people-fill"></i> Quản lý User
            </a>

            <a asp-area="Admin" asp-controller="Files" asp-action="Index" class="nav-admin-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Files" ? "active" : "")">
                <i class="bi bi-file-earmark-lock-fill"></i> Quản lý Tệp tin
            </a>

            <a asp-area="Admin" asp-controller="SystemSettings" asp-action="Index"
               class="nav-admin-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "SystemSettings" ? "active" : "")">
                <i class="bi bi-gear-fill"></i> Cấu hình hệ thống
            </a>
            <div class="mt-4">
                <small class="text-uppercase text-muted fw-bold mb-3 d-block px-3" style="font-size: 0.7rem; letter-spacing: 1px;">Hệ thống</small>
                <a asp-area="Admin" asp-controller="AuditLogs" asp-action="Index" class="nav-admin-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "AuditLogs" ? "active" : "")">
                    <i class="bi bi-journal-text"></i> Nhật ký hệ thống
                </a>
                <a href="/" class="nav-admin-link text-warning">
                    <i class="bi bi-arrow-left-square-fill"></i> Về trang chủ
                </a>
            </div>
        </nav>

        <div class="p-3">
            <div class="bg-dark bg-opacity-50 rounded-4 p-3 text-center">
                <p class="small text-muted mb-0">Hệ thống v1.0.4</p>
            </div>
        </div>
    </aside>

    <div class="main-wrapper">
        <header class="top-navbar justify-content-between">
            <div class="search-wrapper d-none d-md-block">
                <i class="bi bi-search"></i>
                <input type="text" class="admin-search" placeholder="Tìm kiếm nhanh...">
            </div>

            <div class="d-flex align-items-center gap-4">
                <!-- Theme toggle button (sync with main site using 'theme' key) -->
                <button id="themeToggleBtn" type="button" class="btn btn-outline-secondary btn-sm" title="Chuyển sáng/tối">
                    <i id="themeIcon" class="bi bi-moon-fill"></i>
                </button>

                 <div class="position-relative cursor-pointer">
                     <i class="bi bi-bell fs-5 text-muted"></i>
                     <span class="position-absolute top-0 start-100 translate-middle badge rounded-circle bg-danger border border-white" style="padding: 3px;">
                         <span class="visually-hidden">unread</span>
                     </span>
                 </div>

                 <div class="dropdown profile-dropdown">
                     <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                         <img src="https://ui-avatars.com/api/?name=Admin&background=0D6EFD&color=fff" width="35" height="35" class="rounded-circle">
                         <span class="d-none d-sm-inline">@User.Identity.Name</span>
                     </button>
                     <ul class="dropdown-menu dropdown-menu-end">
                         <li><a class="dropdown-item py-2" asp-area="Admin" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i> Hồ sơ Admin</a></li>
                         <li><a class="dropdown-item py-2" href="#"><i class="bi bi-gear me-2"></i> Cài đặt</a></li>
                         <li><hr class="dropdown-divider"></li>
                         <li>
                             <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                 <button type="submit" class="dropdown-item py-2 text-danger fw-bold">
                                     <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                 </button>
                             </form>
                         </li>
                     </ul>
                 </div>
             </div>
         </header>

         <div class="content-body">
             @RenderBody()
         </div>
     </div>

     <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
     <script>
        (function(){
            var btn = document.getElementById('themeToggleBtn');
            var icon = document.getElementById('themeIcon');
            function applyTheme(t){
                if(t === 'dark'){
                    document.body.classList.add('dark-mode');
                    if(icon) { icon.className = 'bi bi-sun-fill'; }
                } else {
                    document.body.classList.remove('dark-mode');
                    if(icon) { icon.className = 'bi bi-moon-fill'; }
                }
            }
            // init from localStorage using the same key as main layout
            var saved = null;
            try{ saved = localStorage.getItem('theme'); }catch(e){}
            applyTheme(saved==='dark' ? 'dark' : 'light');
            if(btn){
                btn.addEventListener('click', function(){
                    var isDark = document.body.classList.contains('dark-mode');
                    var next = isDark ? 'light' : 'dark';
                    applyTheme(next);
                    try{ localStorage.setItem('theme', next); }catch(e){}
                });
            }
        })();
    </script>
     @await RenderSectionAsync("Scripts", required: false)
 </body>
 </html>