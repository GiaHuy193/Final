@using Microsoft.AspNetCore.Identity
@using WebDocumentManagement_FileSharing.Helpers
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Quản lý User";
    var tierMap = ViewBag.UserTier as IDictionary<string, string> ?? new Dictionary<string, string>();
    var storageMap = ViewBag.UserStorageBytes as IDictionary<string, long> ?? new Dictionary<string, long>();
}

<style>
    /* Allow dropdowns inside this table to overflow the scroll container */
    .table-responsive.dropdown-escape {
        overflow: visible !important;
    }
    /* Ensure dropdown appears above other elements */
    .table-responsive.dropdown-escape .dropdown-menu {
        z-index: 2000;
    }
</style>

<div class="container-fluid px-4 py-4">
    <h3 class="fw-bold">Quản lý người dùng</h3>

    <partial name="_StatusMessage" />

    <div class="table-responsive mt-4 dropdown-escape">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Gói dung lượng</th>
                    <th>Dung lượng đã upload</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    var bytes = storageMap.ContainsKey(user.Id) ? storageMap[user.Id] : 0L;
                    var formatted = StorageHelper.FormatSize(bytes);
                    var tier = tierMap.ContainsKey(user.Id) ? tierMap[user.Id] : "Standard";
                    var isLocked = user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.UtcNow;

                    <tr>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>@tier</td>
                        <td>@formatted</td>
                        <td class="text-end">
                            <div class="d-inline-block me-2">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="upgradeDropdown-@user.Id" data-bs-toggle="dropdown" data-bs-boundary="viewport" data-bs-display="static" aria-expanded="false">
                                        Nâng cấp
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="upgradeDropdown-@user.Id">
                                        <li>
                                            <form method="post" asp-action="SetUserTier" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="tier" value="Standard" />
                                                <button type="submit" class="dropdown-item@(tier=="Standard"?" active":"")">Standard</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-action="SetUserTier" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="tier" value="Pro" />
                                                <button type="submit" class="dropdown-item@(tier=="Pro"?" active":"")">Pro</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-action="SetUserTier" class="m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="tier" value="Premium" />
                                                <button type="submit" class="dropdown-item@(tier=="Premium"?" active":"")">Premium</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            @if (!isLocked)
                            {
                                <form method="post" asp-action="LockUser" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button class="btn btn-sm btn-danger">Khóa</button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-action="UnlockUser" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button class="btn btn-sm btn-outline-success">Mở khóa</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
