@using WebDocumentManagement_FileSharing.Models
@model IEnumerable<Document>

@{
    ViewData["Title"] = "Quản lý Tệp tin hệ thống";
    var userEmails = ViewBag.UserEmails as IDictionary<string, string> ?? new Dictionary<string, string>();

    // Helper: Lấy màu và icon dựa trên đuôi file
    (string icon, string color, string bg) GetFileStyle(string fileName)
    {
        var ext = System.IO.Path.GetExtension(fileName).ToLower();
        return ext switch
        {
            ".pdf" => ("bi-file-earmark-pdf-fill", "text-danger", "bg-danger-subtle"),
            ".doc" or ".docx" => ("bi-file-earmark-word-fill", "text-primary", "bg-primary-subtle"),
            ".xls" or ".xlsx" => ("bi-file-earmark-excel-fill", "text-success", "bg-success-subtle"),
            ".ppt" or ".pptx" => ("bi-file-earmark-slides-fill", "text-warning", "bg-warning-subtle"),
            ".zip" or ".rar" => ("bi-file-earmark-zip-fill", "text-dark", "bg-secondary-subtle"),
            ".jpg" or ".jpeg" or ".png" => ("bi-file-earmark-image-fill", "text-info", "bg-info-subtle"),
            _ => ("bi-file-earmark-fill", "text-secondary", "bg-light")
        };
    }

    // Helper: Lấy ký tự đầu cho Avatar
    string GetInitials(string email) => string.IsNullOrEmpty(email) ? "?" : email.Substring(0, 1).ToUpper();
}

<style>
    :root {
        --bg-body: #f8fafc;
        --card-bg: #ffffff;
    }

    body {
        background-color: var(--bg-body);
        font-family: 'Segoe UI', sans-serif;
    }

    /* File Icon Box */
    .file-thumb {
        width: 46px;
        height: 46px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: transform 0.2s;
    }

    .table-hover tr:hover .file-thumb {
        transform: scale(1.1);
    }

    /* User Avatar nhỏ gọn */
    .user-mini-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: #e2e8f0;
        color: #64748b;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.8rem;
        margin-right: 8px;
    }

    /* Table Styles */
    .modern-table thead th {
        background-color: #f1f5f9;
        color: #64748b;
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .modern-table tbody td {
        padding: 0.75rem 1.5rem;
        vertical-align: middle;
        border-bottom: 1px solid #f1f5f9;
        color: #334155;
    }

    /* Button Action */
    .btn-icon-action {
        width: 34px;
        height: 34px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        border: 1px solid transparent;
        background: white;
        color: #64748b;
    }

        .btn-icon-action:hover {
            background-color: #f1f5f9;
            border-color: #cbd5e1;
            color: #0f172a;
        }

        .btn-icon-action.danger:hover {
            background-color: #fef2f2;
            border-color: #fca5a5;
            color: #ef4444;
        }

    /* Search Input */
    .search-box {
        position: relative;
    }

        .search-box input {
            padding-left: 2.5rem;
            border-radius: 20px;
            background-color: white;
            border: 1px solid #e2e8f0;
        }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }
</style>

<div class="container-fluid py-5 px-lg-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
        <div>
            <h3 class="fw-bold mb-1 text-slate-800">Hệ thống Tệp tin</h3>
            <p class="text-muted small mb-0">
                Tổng cộng: <span class="fw-bold text-dark">@Model.Count()</span> tệp tin đang được lưu trữ
            </p>
        </div>

        <form asp-action="Index" method="get" class="mt-3 mt-md-0">
            <div class="search-box shadow-sm">
                <i class="bi bi-search"></i>
                <input type="text" name="search" class="form-control"
                       placeholder="Tìm kiếm tệp..."
                       value="@ViewBag.CurrentSearch"
                       style="width: 300px;">
            </div>
        </form>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <div class="table-responsive">
            <table class="table modern-table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Tên tệp tin</th>
                        <th>Người sở hữu</th>
                        <th>Kích thước</th>
                        <th>Ngày tải lên</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var style = GetFileStyle(item.FileName);
                        var email = userEmails.ContainsKey(item.OwnerId) ? userEmails[item.OwnerId] : "Unknown";
                        var sizeMB = item.FileSize / 1024.0 / 1024.0;

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="file-thumb @style.bg @style.color me-3">
                                        <i class="bi @style.icon"></i>
                                    </div>
                                    <div style="max-width: 300px;">
                                        <div class="fw-bold text-dark text-truncate" title="@item.FileName">
                                            @item.FileName
                                        </div>
                                        <div class="text-muted small text-uppercase" style="font-size: 0.7rem;">
                                            @System.IO.Path.GetExtension(item.FileName).Replace(".", "") FILE
                                        </div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="user-mini-avatar">
                                        @GetInitials(email)
                                    </div>
                                    <span class="text-truncate text-secondary" style="max-width: 150px;" title="@email">
                                        @email
                                    </span>
                                </div>
                            </td>

                            <td>
                                <span class="fw-medium text-dark">@sizeMB.ToString("0.##") MB</span>
                            </td>

                            <td>
                                <span class="text-secondary small">
                                    @item.UploadedDate.ToString("dd/MM/yyyy")
                                </span>
                                <div class="text-muted" style="font-size: 0.7rem;">
                                    @item.UploadedDate.ToString("HH:mm")
                                </div>
                            </td>

                            <td class="text-end pe-4">
                                <a asp-action="Download" asp-controller="Document" asp-route-id="@item.Id" class="btn-icon-action me-1" title="Tải xuống kiểm tra" target="_blank">
                                    <i class="bi bi-download"></i>
                                </a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline-block" onsubmit="return confirm('CẢNH BÁO: Hành động này sẽ xóa vĩnh viễn tệp tin khỏi hệ thống và không thể khôi phục. Bạn chắc chắn chứ?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn-icon-action danger" title="Xóa vĩnh viễn">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="text-muted mb-2"><i class="bi bi-folder-x display-4"></i></div>
                <p class="text-muted">Không tìm thấy tệp tin nào.</p>
            </div>
        }
    </div>
</div>