@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var username = UserManager.GetUserName(User);

        // KHỞI TẠO ĐƯỜNG DẪN PROFILE
        var profileLink = Url.Page("/Account/Manage/Index", new { area = "Identity" });

        @* Chuyển thành cấu trúc Dropdown *@
        <li class="nav-item dropdown">

            @* Nút kích hoạt Dropdown (Email người dùng) *@
            <a id="userDropdownToggle"
               class="nav-link dropdown-toggle user-dropdown-toggle text-primary"
               href="#" role="button" data-bs-toggle="dropdown"
               aria-expanded="false" title="Quản lý tài khoản">
                <i class="bi bi-person-circle fs-5 me-2"></i>
                <span class="fw-semibold">@username</span>
            </a>

            @* Menu Dropdown *@
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdownToggle">

                @* 1. Profile: SỬ DỤNG HREF THAY VÌ ASP-PAGE *@
                <li>
                    <a class="dropdown-item" href="@profileLink">
                        <i class="bi bi-person-badge me-2 text-primary"></i> Hồ sơ (Profile)
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                @* 2. Logout *@
                <li>
                    <form id="logoutFormDropdown" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="dropdown-item logout-dropdown-button">
                            <i class="bi bi-box-arrow-right me-2 text-danger"></i> Đăng xuất
                        </button>
                    </form>
                </li>
            </ul>
        </li>

    }
    else
    {
        <li class="nav-item d-flex align-items-center gap-3">
            <a id="login" class="btn-login text-decoration-none"
               asp-area="Identity"
               asp-page="/Account/Login">
                Đăng nhập
            </a>

            <a id="register" class="btn-register text-decoration-none"
               asp-area="Identity"
               asp-page="/Account/Register">
                Đăng ký
            </a>
        </li>
    }
</ul>