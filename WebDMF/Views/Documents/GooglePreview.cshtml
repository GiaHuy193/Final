@{
    Layout = "_Layout";
    ViewData["Title"] = "Xem trực tuyến - DocNest";
}

<div class="container-fluid mt-3">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-file-earmark-text me-2"></i> @ViewBag.Title
            </h5>
            <div class="btn-group">
                <a asp-action="Download" asp-route-id="@Context.Request.RouteValues["id"]" class="btn btn-sm btn-outline-success">
                    <i class="bi bi-download me-1"></i> Tải về máy
                </a>
                <button onclick="window.close()" class="btn btn-sm btn-outline-secondary">Đóng tab</button>
            </div>
        </div>
        <div class="card-body p-0">
            <div style="height: 85vh; width: 100%;">
                <iframe src="https://drive.google.com/file/d/@ViewBag.FileId/preview"
                        width="100%"
                        height="100%"
                        style="border: none;"
                        allow="autoplay"></iframe>
            </div>
        </div>
    </div>
</div>