@model WebDocumentManagement_FileSharing.Models.FileSystemViewModel
@{
    ViewData["Title"] = "Thùng rác";
}

<style>
    /* --- THEME VARIABLES --- */
    :root {
        --bg-body: #f8f9fa;
        --bg-card: #ffffff;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
        --primary-color: #3b82f6;
        --danger-color: #ef4444;
    }

    /* --- PAGE HEADER --- */
    .page-title {
        font-weight: 700;
        color: var(--text-primary);
        /* display: flex; -> Không cần flex nữa vì hết icon */
        /* align-items: center; */
        /* gap: 10px; */
    }

    /* --- TOOLBAR (ĐÃ SỬA) --- */
    .trash-toolbar {
        /* Đã bỏ background, border, shadow, radius */
        background-color: transparent;
        padding: 0;
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    @@media (min-width: 768px) {
        .trash-toolbar {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            /* Căn giữa theo chiều dọc */
        }
    }

    /* --- SECTION CARD --- */
    .trash-section {
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        margin-bottom: 2rem;
        overflow: hidden;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
    }

    /* --- LIST ITEM --- */
    .list-group-flush .list-group-item {
        border-bottom: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
        transition: background-color 0.2s;
        cursor: pointer;
    }

        .list-group-flush .list-group-item:last-child {
            border-bottom: none;
        }

        .list-group-flush .list-group-item:hover {
            background-color: #f1f5f9;
        }

    /* Checkbox custom */
    .form-check-input {
        width: 1.3em;
        height: 1.3em;
        margin-top: 0;
        cursor: pointer;
        border-color: #cbd5e1;
    }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

    /* Item Info */
    .item-name {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    .item-meta {
        font-size: 0.85rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Icons trong danh sách (Giữ lại) */
    .trash-icon-folder {
        color: #f59e0b;
        font-size: 1.75rem;
    }

    .trash-icon-file {
        color: var(--text-secondary);
        font-size: 1.75rem;
    }

    /* Empty state */
    .empty-state-box {
        padding: 3rem;
        text-align: center;
        color: var(--text-secondary);
        background-color: #fff;
    }
</style>

<div class="container-fluid py-4 px-4">

    <div class="trash-toolbar">
        <h3 class="page-title mb-0">
            Thùng rác
        </h3>

        <div class="d-flex gap-2 flex-wrap">
            <form method="post" asp-action="RestoreSelected" id="restoreForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="documentIds" id="restoreDocumentIds" />
                <input type="hidden" name="folderIds" id="restoreFolderIds" />
                <button type="submit" class="btn btn-primary fw-medium shadow-sm" title="Khôi phục các mục đã chọn">
                    Khôi phục
                </button>
            </form>

            <form method="post" asp-action="DeletePermanently" id="permanentDeleteForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="documentIds" id="delDocumentIds" />
                <input type="hidden" name="folderIds" id="delFolderIds" />
                <button type="submit" class="btn btn-white border fw-medium text-danger hover-danger" title="Xóa vĩnh viễn các mục đã chọn">
                    Xóa vĩnh viễn
                </button>
            </form>

            <div class="vr mx-1 d-none d-md-block"></div>

            <button id="deleteAllBtn" class="btn btn-danger fw-bold shadow-sm">
                Dọn sạch thùng rác
            </button>
        </div>
    </div>

    <form id="trashForm">

        <div class="mb-4">
            <h6 class="fw-bold text-uppercase text-secondary small mb-3 d-flex align-items-center gap-2">
                <i class="bi bi-folder2-open fs-5"></i> Thư mục
            </h6>

            <div class="trash-section">
                <div class="list-group list-group-flush">
                    @if (Model?.Folders != null && Model.Folders.Any())
                    {
                        foreach (var f in Model.Folders)
                        {
                            <label class="list-group-item d-flex align-items-center">
                                <input class="form-check-input me-4 trash-checkbox" type="checkbox" data-type="folder" data-id="@f.Id" />
                                <i class="bi bi-folder-fill trash-icon-folder me-3"></i>
                                <div class="flex-grow-1">
                                    <div class="item-name">@f.Name</div>
                                    <div class="item-meta">
                                        <i class="bi bi-clock-history"></i> Đã xóa: @f.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                                <a class="btn btn-sm btn-light border text-secondary rounded-circle" asp-controller="Folders" asp-action="Details" asp-route-id="@f.Id" title="Chi tiết">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                            </label>
                        }
                    }
                    else
                    {
                        <div class="empty-state-box">
                            <i class="bi bi-folder-x fs-1 opacity-25 mb-2 d-block"></i>
                            <span>Không có thư mục nào trong thùng rác</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="mb-4">
            <h6 class="fw-bold text-uppercase text-secondary small mb-3 d-flex align-items-center gap-2">
                <i class="bi bi-file-earmark-text fs-5"></i> Tệp tin
            </h6>

            <div class="trash-section">
                <div class="list-group list-group-flush">
                    @if (Model?.Documents != null && Model.Documents.Any())
                    {
                        foreach (var d in Model.Documents)
                        {
                            <label class="list-group-item d-flex align-items-center">
                                <input class="form-check-input me-4 trash-checkbox" type="checkbox" data-type="doc" data-id="@d.Id" />

                                @{
                                    var ext = System.IO.Path.GetExtension(d.FileName)?.ToLower();
                                    var iconClass = "bi-file-earmark-text";
                                    var iconColor = "text-secondary";
                                    if (ext == ".pdf") { iconClass = "bi-file-earmark-pdf"; iconColor = "text-danger"; }
                                    else if (ext == ".docx" || ext == ".doc") { iconClass = "bi-file-earmark-word"; iconColor = "text-primary"; }
                                    else if (ext == ".xlsx" || ext == ".xls") { iconClass = "bi-file-earmark-excel"; iconColor = "text-success"; }
                                    else if (new[] { ".jpg", ".png", ".jpeg" }.Contains(ext)) { iconClass = "bi-file-earmark-image"; iconColor = "text-info"; }
                                }
                                <i class="bi @iconClass trash-icon-file @iconColor me-3"></i>

                                <div class="flex-grow-1">
                                    <div class="item-name">@d.FileName</div>
                                    <div class="item-meta">
                                        <span class="me-3"><i class="bi bi-hdd"></i> @(Math.Round(d.FileSize / 1024.0, 1)) KB</span>
                                        <span><i class="bi bi-clock-history"></i> Đã xóa: @d.UploadedDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>
                                <a class="btn btn-sm btn-light border text-secondary rounded-circle" asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id" title="Chi tiết">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                            </label>
                        }
                    }
                    else
                    {
                        <div class="empty-state-box">
                            <i class="bi bi-file-earmark-x fs-1 opacity-25 mb-2 d-block"></i>
                            <span>Không có tệp tin nào trong thùng rác</span>
                        </div>
                    }
                </div>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <script>
        (function(){
            // --- Helper Functions ---
            var getChecked = function(type){
                var ids = [];
                document.querySelectorAll('.trash-checkbox').forEach(function(cb){
                    if (cb.checked && cb.getAttribute('data-type') === type) ids.push(cb.getAttribute('data-id'));
                });
                return ids;
            };

            var getAllIds = function(type){
                var ids = [];
                document.querySelectorAll('.trash-checkbox').forEach(function(cb){
                    if (cb.getAttribute('data-type') === type) ids.push(cb.getAttribute('data-id'));
                });
                return ids;
            };

            var updateHidden = function(){
                var docs = getChecked('doc');
                var folders = getChecked('folder');

                // Update hidden inputs for Restore form
                document.getElementById('restoreDocumentIds').value = docs.join(',');
                document.getElementById('restoreFolderIds').value = folders.join(',');

                // Update hidden inputs for Delete form
                document.getElementById('delDocumentIds').value = docs.join(',');
                document.getElementById('delFolderIds').value = folders.join(',');
            };

            // Listen for checkbox changes
            document.querySelectorAll('.trash-checkbox').forEach(function(cb){ cb.addEventListener('change', updateHidden); });

            // --- Handlers ---

            // 1. Restore Selected
            var restoreForm = document.getElementById('restoreForm');
            if (restoreForm){
                restoreForm.addEventListener('submit', function(e){
                    updateHidden();
                    var d = document.getElementById('restoreDocumentIds').value;
                    var f = document.getElementById('restoreFolderIds').value;
                    if(!d && !f) {
                        e.preventDefault();
                        alert('Vui lòng chọn ít nhất một mục để khôi phục.');
                    }
                });
            }

            // 2. Delete Selected Permanently
            var permForm = document.getElementById('permanentDeleteForm');
            if (permForm){
                permForm.addEventListener('submit', function(e){
                    e.preventDefault();
                    updateHidden();
                    var docsCsv = document.getElementById('delDocumentIds').value || '';
                    var foldersCsv = document.getElementById('delFolderIds').value || '';

                    if (!docsCsv && !foldersCsv) {
                        alert('Vui lòng chọn mục để xóa.');
                        return;
                    }

                    if (!confirm('Bạn có chắc muốn xóa vĩnh viễn các mục đã chọn? Hành động này không thể hoàn tác.')) return;

                    var token = permForm.querySelector('input[name="__RequestVerificationToken"]').value;
                    fetch('@Url.Action("DeletePermanently", "Documents")', {
                        method:'POST',
                        headers:{ 'RequestVerificationToken': token, 'Content-Type':'application/x-www-form-urlencoded' },
                        body: new URLSearchParams({ documentIds: docsCsv, folderIds: foldersCsv })
                    }).then(function(r){
                        if (r.redirected) window.location.href=r.url;
                        else window.location.reload();
                    });
                });
            }

            // 3. Delete All (Empty Trash)
            var deleteAllBtn = document.getElementById('deleteAllBtn');
            if (deleteAllBtn){
                deleteAllBtn.addEventListener('click', function(e){
                    e.preventDefault();

                    var docs = getAllIds('doc');
                    var folders = getAllIds('folder');

                    if (docs.length === 0 && folders.length === 0) {
                        alert('Thùng rác đang trống.');
                        return;
                    }

                    if (!confirm('CẢNH BÁO: Bạn có chắc chắn muốn làm sạch thùng rác? Tất cả dữ liệu sẽ bị xóa vĩnh viễn và KHÔNG THỂ khôi phục.')) return;

                    var docsCsv = docs.join(',');
                    var foldersCsv = folders.join(',');
                    var token = document.querySelector('#permanentDeleteForm input[name="__RequestVerificationToken"]').value;

                    fetch('@Url.Action("DeletePermanently", "Documents")', {
                        method:'POST',
                        headers:{ 'RequestVerificationToken': token, 'Content-Type':'application/x-www-form-urlencoded' },
                        body: new URLSearchParams({ documentIds: docsCsv, folderIds: foldersCsv })
                    }).then(function(r){
                        if (r.redirected) window.location.href=r.url;
                        else window.location.reload();
                    });
                });
            }
        })();
    </script>
}