@model WebDocumentManagement_FileSharing.Models.Document

@{
    ViewData["Title"] = "Tải lên tài liệu";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title">Tải lên tài liệu</h1>
                    <hr />

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label for="fileUpload" class="form-label">Chọn tệp</label>
                            <input type="file" name="fileUpload" id="fileUpload" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Tiêu đề (tuỳ chọn)</label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề hiển thị (không bắt buộc)" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="FolderId" class="form-label">Tải lên vào thư mục</label>
                            <select asp-for="FolderId" class="form-select" asp-items="ViewBag.FolderId">
                                <option value="0">-- Thư mục gốc --</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">Tải lên</button>
                            @if (ViewBag.ReturnUrl != null)
                            {
                                <a class="btn btn-secondary" href="@ViewBag.ReturnUrl">Hủy</a>
                            }
                            else
                            {
                                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
