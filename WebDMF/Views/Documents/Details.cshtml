@using System.IO
@using System.Security.Claims
@model WebDocumentManagement_FileSharing.Models.Document

@{
    ViewData["Title"] = Model.FileName;
    var ext = Model.Extension?.ToLower().Replace(".", "") ?? "file";

    // 1. LOGIC TÍNH TOÁN PHIÊN BẢN (Current vs Older)
    int currentVersionNumber = 1;
    if (Model.Versions != null && Model.Versions.Any())
    {
        // Phiên bản hiện tại là số lớn nhất
        currentVersionNumber = Model.Versions.Max(v => v.VersionNumber);
    }

    // Danh sách phiên bản cũ (nhỏ hơn bản hiện tại)
    var olderVersions = (Model.Versions != null)
        ? Model.Versions.Where(v => v.VersionNumber < currentVersionNumber)
                        .OrderByDescending(v => v.VersionNumber).ToList()
        : new List<WebDocumentManagement_FileSharing.Models.DocumentVersion>();

    var olderCount = olderVersions.Count;

    // 2. LOGIC CHỌN ICON VÀ MÀU SẮC THEO ĐUÔI FILE
    string iconColor = ext switch
    {
        "pdf" => "text-danger",
        "doc" or "docx" => "text-primary",
        "xls" or "xlsx" => "text-success",
        "ppt" or "pptx" => "text-warning",
        "zip" or "rar" => "text-secondary",
        _ => "text-info"
    };
    string iconClass = ext switch
    {
        "pdf" => "bi-file-earmark-pdf-fill",
        "doc" or "docx" => "bi-file-earmark-word-fill",
        "xls" or "xlsx" => "bi-file-earmark-excel-fill",
        "ppt" or "pptx" => "bi-file-earmark-slides-fill",
        "zip" or "rar" => "bi-file-earmark-zip-fill",
        _ => "bi-file-earmark-text-fill"
    };
}

<style>
    /* Timeline Style */
    .timeline {
        border-left: 2px solid #e9ecef;
        margin-left: 1rem;
        padding-left: 1.5rem;
        position: relative;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .timeline-dot {
        width: 12px;
        height: 12px;
        background-color: #dee2e6;
        border-radius: 50%;
        position: absolute;
        left: -31px;
        top: 6px;
        border: 2px solid #fff;
        box-shadow: 0 0 0 1px #dee2e6;
    }

    .timeline-item:first-child .timeline-dot {
        background-color: #198754;
        box-shadow: 0 0 0 1px #198754;
    }

    /* Action Buttons */
    .btn-action {
        border-radius: 50px;
        padding: 0.5rem 1.25rem;
        font-weight: 600;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        transition: transform 0.1s;
    }

        .btn-action:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    /* AI Button & Box Styles */
    .btn-ai {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border: none;
    }

        .btn-ai:hover {
            color: white;
            opacity: 0.9;
        }

    .ai-summary-box {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border: 1px solid #bae6fd;
        border-radius: 16px;
    }
</style>

<div class="container py-5">

    <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
        <div class="card-body p-4 p-lg-5 d-flex flex-column flex-md-row align-items-center gap-4">
            <div class="bg-light rounded-4 p-4 d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                <i class="bi @iconClass @iconColor" style="font-size: 3.5rem;"></i>
            </div>

            <div class="flex-grow-1 text-center text-md-start">
                <h2 class="fw-bold mb-1 text-dark text-break">@Model.FileName</h2>
                <div class="text-muted mb-3">@Model.Title</div>

                <div class="d-flex flex-wrap justify-content-center justify-content-md-start gap-3 text-secondary small fw-medium">
                    <span class="bg-light px-3 py-1 rounded-pill"><i class="bi bi-hdd me-1"></i> @(Math.Round(Model.FileSize / 1024.0, 2)) KB</span>
                    <span class="bg-light px-3 py-1 rounded-pill"><i class="bi bi-calendar3 me-1"></i> @Model.UploadedDate.ToString("dd/MM/yyyy HH:mm")</span>
                    <span class="bg-light px-3 py-1 rounded-pill"><i class="bi bi-person me-1"></i> @(ViewBag.OwnerName ?? "Hệ thống")</span>
                </div>
            </div>

            <div class="d-flex flex-column gap-2" style="min-width: 200px;">
                @if (User?.Identity?.IsAuthenticated == true && ((ViewBag.IsPremium != null && (bool)ViewBag.IsPremium) || User.IsInRole("Premium")))
                {
                    <button id="btnSummarize" class="btn btn-ai btn-action" onclick="summarizeFile(@Model.Id)">
                        <i class="bi bi-stars me-2"></i> Tóm tắt bằng AI
                    </button>
                }
                else
                {
                    <a asp-controller="Payment" asp-action="Premium" class="btn btn-outline-primary btn-action text-primary" title="Chỉ dành cho gói Premium">
                        <i class="bi bi-stars me-2"></i> Tóm tắt (Premium)
                    </a>
                }

                <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary btn-action text-white">
                    <i class="bi bi-download me-2"></i> Tải xuống
                </a>

                <a asp-action="Open" asp-route-id="@Model.Id" target="_blank" class="btn btn-white border btn-action text-primary bg-white">
                    <i class="bi bi-eye me-2"></i> Xem trước
                </a>

                <a asp-action="Index" asp-route-folderId="@Model.FolderId" class="btn btn-link text-secondary text-decoration-none btn-sm mt-1">
                    <i class="bi bi-arrow-left me-1"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    @if (User?.Identity?.IsAuthenticated == true && ((ViewBag.IsPremium != null && (bool)ViewBag.IsPremium) || User.IsInRole("Premium")))
    {
        <div id="aiResultBox" class="card ai-summary-box mb-4 shadow-sm d-none">
            <div class="card-body p-4">
                <h5 class="fw-bold text-primary mb-3">
                    <i class="bi bi-robot me-2"></i>Kết quả tóm tắt từ Gemini
                </h5>
                <div id="aiContent" class="text-dark" style="white-space: pre-line; line-height: 1.6;"></div>
            </div>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 fw-bold pt-4 px-4">
                    <i class="bi bi-sliders me-2 text-primary"></i> Thuộc tính
                </div>
                <div class="card-body px-4 pb-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between px-0 py-3 border-light">
                            <span class="text-muted small">Loại tệp</span>
                            <span class="fw-medium text-uppercase">@ext</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0 py-3 border-light">
                            <span class="text-muted small">Phiên bản hiện tại</span>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">@($"v{currentVersionNumber}")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0 py-3 border-light">
                            <span class="text-muted small">ID Hệ thống</span>
                            <span class="font-monospace text-muted small">#@Model.Id</span>
                        </li>
                    </ul>
                    <hr class="border-light my-4">
                    <button class="btn btn-outline-success w-100 rounded-pill py-2 fw-bold" data-bs-toggle="modal" data-bs-target="#uploadVersionModal">
                        <i class="bi bi-cloud-arrow-up me-2"></i> Cập nhật phiên bản mới
                    </button>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 fw-bold pt-4 px-4 d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-clock-history me-2 text-primary"></i> Lịch sử phiên bản</span>
                    <span class="badge bg-light text-secondary rounded-pill fw-normal">@olderCount bản cũ</span>
                </div>
                <div class="card-body px-4 pb-4">
                    <div class="timeline mt-2">
                        <div class="timeline-item">
                            <div class="timeline-dot bg-success border-success"></div>
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="fw-bold text-success mb-1">@($"Phiên bản hiện tại v{currentVersionNumber}")</h6>
                                    <p class="small text-muted mb-2">Đang sử dụng</p>
                                </div>
                                <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-sm btn-success text-white rounded-pill px-3 shadow-sm">
                                    <i class="bi bi-download"></i> Tải về
                                </a>
                            </div>
                        </div>

                        @if (olderVersions.Any())
                        {
                            foreach (var v in olderVersions)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-dot"></div>
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="fw-bold mb-1">@($"Phiên bản v{v.VersionNumber}")</h6>
                                            <p class="small text-muted mb-1"><i class="bi bi-calendar3 me-1"></i> @v.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                                            @if (!string.IsNullOrEmpty(v.ChangeNote))
                                            {
                                                <div class="bg-light p-2 rounded-3 small text-secondary d-inline-block mt-1">
                                                    <i class="bi bi-chat-left-quote me-1"></i> @v.ChangeNote
                                                </div>
                                            }
                                        </div>
                                        <div class="d-flex" style="gap:8px;">
                                            <a asp-action="DownloadVersion" asp-route-versionId="@v.Id" class="btn btn-sm btn-light border rounded-pill px-3" title="Tải về bản này">
                                                <i class="bi bi-download"></i> Tải về
                                            </a>

                                            @* Show delete button only for owner or Admin *@
                                            @{ var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier); var isAdmin = User.IsInRole("Admin"); }
                                            @if (isAdmin || string.Equals(currentUserId, Model.OwnerId, StringComparison.OrdinalIgnoreCase))
                                            {
                                                <form asp-action="DeleteVersion" method="post" onsubmit="return confirm('Xóa phiên bản này? Hành động không thể hoàn tác.');" class="d-inline-block">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="versionId" value="@v.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3" title="Xóa phiên bản">
                                                        <i class="bi bi-trash"></i> Xóa
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-3 text-muted small bg-light rounded-3 ms-4">
                                Chưa có phiên bản cũ nào.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="uploadVersionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-action="UploadNewVersion" method="post" enctype="multipart/form-data" class="modal-content border-0 shadow rounded-4">
            @Html.AntiForgeryToken()
            <input type="hidden" name="documentId" value="@Model.Id" />
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Cập nhật phiên bản mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-3 pb-4">
                <div class="alert alert-light border border-info text-info small rounded-3 mb-3">
                    <i class="bi bi-info-circle-fill me-1"></i> Tệp hiện tại sẽ được lưu vào lịch sử. Tệp mới sẽ trở thành bản chính.
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold small text-secondary">CHỌN TỆP MỚI</label>
                    <input type="file" name="fileUpload" class="form-control" required />
                </div>
                <div class="mb-0">
                    <label class="form-label fw-bold small text-secondary">GHI CHÚ THAY ĐỔI</label>
                    <textarea name="changeNote" class="form-control" rows="3" placeholder="Ví dụ: Cập nhật số liệu quý 4..." required></textarea>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0 pb-4">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold">Xác nhận cập nhật</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script>
        function summarizeFile(docId) {
            // 1. Lấy các phần tử HTML (Giờ đã có chắc chắn trong HTML ở trên)
            var resultBox = document.getElementById('aiResultBox');
            var contentDiv = document.getElementById('aiContent');
            var btn = document.getElementById('btnSummarize');

            // 2. Hiển thị box và Loading
            resultBox.classList.remove('d-none');
            contentDiv.innerHTML = `
                <div class="d-flex align-items-center text-primary">
                    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                    <span>Đang đọc tài liệu và phân tích... (Việc này có thể mất vài giây)</span>
                </div>
            `;
            btn.disabled = true;

            // 3. Gọi API (Sử dụng Url.Action để fix lỗi đường dẫn 404)
            // Lưu ý: Controller phải tên là AIController, Action là SummarizeDocument
            var url = '@Url.Action("SummarizeDocument", "AI")?documentId=' + docId;

            fetch(url, {
                method: 'POST'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Lỗi HTTP: " + response.status);
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Hiển thị kết quả thành công
                    // Chuyển ký tự xuống dòng \n thành thẻ <br>
                    let formattedSummary = data.summary.replace(/\n/g, '<br>');
                    contentDiv.innerHTML = formattedSummary;
                } else {
                    // Hiển thị lỗi từ server trả về
                    contentDiv.innerHTML = `
                        <div class="alert alert-danger mb-0">
                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                            Lỗi: ${data.error || 'Không thể tóm tắt.'}
                        </div>
                    `;
                }
                btn.disabled = false;
            })
            .catch(error => {
                console.error('Lỗi JS:', error);
                contentDiv.innerHTML = `
                    <div class="alert alert-danger mb-0">
                        <i class="bi bi-wifi-off me-1"></i>
                        Không thể kết nối đến server hoặc lỗi đường dẫn. (Xem Console F12 để biết chi tiết)
                    </div>
                `;
                btn.disabled = false;
            });
        }
    </script>
}