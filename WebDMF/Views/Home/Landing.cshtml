@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DocNest - Không gian làm việc đám mây";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <style>
        /* --- CORE VARIABLES --- */
        :root {
            --primary: #0f172a;
            --primary-dark: #0f172a;
            --accent: #8b5cf6; /* Tím */
            --accent-glow: #c4b5fd;
            --text-main: #0f172a;
            --text-sub: #475569;
            --bg-body: #ffffff;
            --glass-border: rgba(255, 255, 255, 0.4);
            --glass-bg: rgba(255, 255, 255, 0.7);
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--text-main);
            background-color: #f8fafc;
            overflow-x: hidden;
            /* Mesh Gradient Background */
            background-image: radial-gradient(at 0% 0%, rgba(59, 130, 246, 0.15) 0px, transparent 50%), radial-gradient(at 100% 0%, rgba(139, 92, 246, 0.15) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(236, 72, 153, 0.1) 0px, transparent 50%);
            background-attachment: fixed;
        }

        /* --- UTILITIES --- */
        .text-gradient {
            background: linear-gradient(135deg, #2563eb 0%, #9333ea 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .blur-bg {
            position: absolute;
            z-index: -1;
            filter: blur(80px);
            opacity: 0.6;
        }

        /* --- NAVBAR --- */
        .nav-wrapper {
            position: fixed;
            top: 24px;
            left: 0;
            right: 0;
            z-index: 1000;
            display: flex;
            justify-content: center;
        }

        .floating-nav {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid var(--glass-border);
            border-radius: 100px;
            padding: 10px 14px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.05);
            min-width: 350px;
            transition: all 0.3s ease;
        }

        .nav-link {
            font-weight: 600;
            color: var(--text-sub) !important;
            font-size: 0.9rem;
            padding: 8px 20px !important;
            border-radius: 50px;
            transition: all 0.3s;
        }

            .nav-link:hover {
                color: var(--primary) !important;
                background: rgba(59, 130, 246, 0.08);
            }

        /* --- HERO SECTION --- */
        .hero-section {
            padding: 180px 0 100px;
            position: relative;
            overflow: hidden;
        }

        .hero-title {
            font-size: clamp(3rem, 6vw, 4.5rem);
            font-weight: 800;
            line-height: 1.1;
            letter-spacing: -0.03em;
            margin-bottom: 24px;
            /* Set title to a single DocNest color to match branding */
            color: var(--primary-dark);
        }

        /* Ensure any existing gradient span inside hero-title displays the same single color */
        .hero-title .text-gradient {
            background: none !important;
            -webkit-background-clip: initial !important;
            -webkit-text-fill-color: initial !important;
            color: var(--primary-dark) !important;
        }

        /* Nút bấm hiện đại */
        .btn-glow {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            color: white;
            border: none;
            padding: 16px 36px;
            border-radius: 50px;
            font-weight: 700;
            position: relative;
            z-index: 1;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            box-shadow: 0 10px 20px rgba(37, 99, 235, 0.2);
        }

            .btn-glow::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, var(--accent) 0%, var(--primary) 100%);
                opacity: 0;
                z-index: -1;
                transition: opacity 0.3s;
            }

            .btn-glow:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 30px rgba(37, 99, 235, 0.3);
                color: white;
            }

                .btn-glow:hover::before {
                    opacity: 1;
                }

        /* UI MOCKUP CAO CẤP */
        .glass-panel {
            background: rgba(255, 255, 255, 0.75);
            backdrop-filter: blur(24px);
            border: 1px solid rgba(255, 255, 255, 0.8);
            border-radius: 24px;
            box-shadow: 0 20px 40px -10px rgba(0,0,0,0.1), inset 0 0 0 1px rgba(255,255,255,0.6);
            overflow: hidden;
        }

        .ui-sidebar {
            width: 60px;
            border-right: 1px solid rgba(0,0,0,0.05);
            background: rgba(248, 250, 252, 0.5);
        }

        .ui-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-bottom: 8px;
        }

        .ui-bar {
            height: 8px;
            border-radius: 4px;
            background: #e2e8f0;
            margin-bottom: 8px;
        }

        .ui-card-sm {
            background: white;
            border-radius: 12px;
            padding: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.02);
        }

        .hero-visual {
            transform: perspective(1000px) rotateY(-8deg) rotateX(4deg) scale(0.95);
            transition: transform 0.6s ease;
        }

            .hero-visual:hover {
                transform: perspective(1000px) rotateY(0deg) rotateX(0deg) scale(1);
            }

        /* --- FEATURES (BENTO GRID) --- */
        .bento-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
        }

        .feature-card {
            background: white;
            border: 1px solid #f1f5f9;
            border-radius: 24px;
            padding: 32px;
            height: 100%;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px -5px rgba(0,0,0,0.08);
                border-color: var(--primary);
            }

        .feature-icon-wrapper {
            width: 56px;
            height: 56px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        /* --- PRICING --- */
        .pricing-card {
            background: white;
            border-radius: 24px;
            padding: 40px;
            border: 1px solid #f1f5f9;
            transition: 0.3s;
            position: relative;
        }

            .pricing-card.popular {
                border: 2px solid var(--primary);
                box-shadow: 0 20px 40px rgba(37, 99, 235, 0.1);
            }

            .pricing-card:hover {
                transform: translateY(-5px);
            }

        .check-list li {
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--text-sub);
        }

        /* --- FOOTER --- */
        footer {
            background: white;
            border-top: 1px solid #e2e8f0;
            padding-top: 60px;
            padding-bottom: 30px;
        }
    </style>
</head>
<body>

    <div class="nav-wrapper">
        <nav class="navbar navbar-expand-lg floating-nav">
            <div class="container-fluid px-2">
                <a class="navbar-brand d-flex align-items-center gap-2 me-4 ps-2" href="#">
                    <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-cloud-fill fs-6"></i>
                    </div>
                    <span class="fw-bold text-dark tracking-tight">DocNest</span>
                </a>

                <div class="d-none d-lg-flex align-items-center gap-1">
                    <a class="nav-link" href="#features">Tính năng</a>
                    <a class="nav-link" href="#pricing">Bảng giá</a>
                </div>

                <div class="d-flex gap-2 ms-3 ms-lg-4">
                    <a class="btn btn-sm fw-bold text-dark hover-bg-light rounded-pill px-3 py-2" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                    <a class="btn btn-dark rounded-pill btn-sm fw-bold px-4 py-2" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
                </div>
            </div>
        </nav>
    </div>

    <main>
        <section class="hero-section">
            <div class="blur-bg bg-primary rounded-circle" style="width: 400px; height: 400px; top: -100px; left: -100px; opacity: 0.1;"></div>
            <div class="blur-bg bg-info rounded-circle" style="width: 300px; height: 300px; bottom: 10%; right: -50px; opacity: 0.1;"></div>

            <div class="container">
                <div class="row align-items-center gy-5">

                    <div class="col-lg-6" data-aos="fade-up" data-aos-duration="1000">

                        <h1 class="hero-title">
                            Quản lý tài liệu <br>
                            <span class="text-gradient">Thông minh hơn.</span>
                        </h1>

                        <p class="text-sub fs-5 mb-5 lh-lg pe-lg-5">
                            Không còn nỗi lo thất lạc dữ liệu. DocNest mang đến trải nghiệm lưu trữ đám mây liền mạch và bảo mật hiện đại.
                        </p>

                        <div class="d-flex gap-3 align-items-center">
                            <a asp-area="Identity" asp-page="/Account/Register" class="btn-glow text-decoration-none">
                                Dùng thử miễn phí
                            </a>
                        </div>

                    </div>

                    <div class="col-lg-6" data-aos="fade-left" data-aos-duration="1200" data-aos-delay="200">
                        <div class="hero-visual position-relative">
                            <div class="glass-panel p-2" style="height: 480px;">
                                <div class="h-100 bg-white rounded-4 d-flex overflow-hidden border border-light">
                                    <div class="ui-sidebar d-flex flex-column align-items-center py-4 gap-3">
                                        <div class="bg-primary rounded-3" style="width: 32px; height: 32px;"></div>
                                        <div class="mt-4 w-50 ui-bar"></div>
                                        <div class="w-50 ui-bar"></div>
                                        <div class="w-50 ui-bar"></div>
                                        <div class="mt-auto rounded-circle bg-secondary bg-opacity-10" style="width: 32px; height: 32px;"></div>
                                    </div>
                                    <div class="flex-grow-1 p-4 bg-light bg-opacity-25">
                                        <div class="d-flex justify-content-between mb-4">
                                            <div style="width: 120px;" class="ui-bar bg-dark opacity-75 h-auto py-2"></div>
                                            <div style="width: 80px;" class="ui-bar h-auto py-2"></div>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-4"><div class="ui-card-sm h-100 d-flex flex-column gap-2"><i class="bi bi-folder-fill text-warning fs-4"></i><div class="ui-bar w-75"></div></div></div>
                                            <div class="col-4"><div class="ui-card-sm h-100 d-flex flex-column gap-2"><i class="bi bi-folder-fill text-info fs-4"></i><div class="ui-bar w-50"></div></div></div>
                                            <div class="col-4"><div class="ui-card-sm h-100 d-flex flex-column gap-2"><i class="bi bi-folder-fill text-danger fs-4"></i><div class="ui-bar w-75"></div></div></div>
                                        </div>
                                        <div class="mt-4 mb-2 small fw-bold text-muted">Tài liệu gần đây</div>
                                        <div class="d-flex flex-column gap-2">
                                            <div class="ui-card-sm d-flex align-items-center gap-3 py-2">
                                                <i class="bi bi-file-earmark-pdf-fill text-danger"></i>
                                                <div class="ui-bar w-50 mb-0"></div>
                                            </div>
                                            <div class="ui-card-sm d-flex align-items-center gap-3 py-2">
                                                <i class="bi bi-file-earmark-word-fill text-primary"></i>
                                                <div class="ui-bar w-25 mb-0"></div>
                                            </div>
                                            <div class="ui-card-sm d-flex align-items-center gap-3 py-2">
                                                <i class="bi bi-image-fill text-success"></i>
                                                <div class="ui-bar w-50 mb-0"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="glass-panel position-absolute p-3 d-flex align-items-center gap-3"
                                 style="bottom: 40px; left: -40px; width: 220px; animation: float 5s ease-in-out infinite;">
                                <div class="bg-success rounded-circle d-flex align-items-center justify-content-center text-white" style="width: 40px; height: 40px;">
                                    <i class="bi bi-check-lg"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark small">Đã tải xong</div>
                                    <div class="text-muted" style="font-size: 10px;">Project_Final.pdf</div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="features" class="py-5">
            <div class="container py-5">
                <div class="text-center mb-5" data-aos="fade-up">
                    <span class="text-primary fw-bold small text-uppercase tracking-wide">Tại sao chọn DocNest?</span>
                    <h2 class="fw-bolder display-6 mt-2">Mạnh mẽ. Đơn giản. An toàn.</h2>
                </div>

                <div class="bento-grid">
                    <div class="feature-card" data-aos="fade-up" data-aos-delay="0">
                        <div class="feature-icon-wrapper bg-blue-subtle text-primary" style="background: #eff6ff;">
                            <i class="bi bi-hdd-network"></i>
                        </div>
                        <h4 class="fw-bold mb-2">Phân cấp lưu trữ linh hoạt</h4>
                        <p class="text-sub">Hệ thống quản lý hạn mức (Quota) thông minh với các gói từ 15GB đến 100GB, tối ưu hóa chi phí và tài nguyên cho từng đối tượng người dùng.</p>
                    </div>

                    <div class="feature-card" data-aos="fade-up" data-aos-delay="100">
                        <div class="feature-icon-wrapper text-white" style="background: linear-gradient(135deg, #8b5cf6, #d946ef);">
                            <i class="bi bi-stars"></i>
                        </div>
                        <h4 class="fw-bold mb-2">Truy vết & Giám sát toàn diện</h4>
                        <p class="text-sub">Tích hợp Nhật ký hoạt động (Audit Log) chi tiết. Ghi lại chính xác mọi thao tác: ai tải lên, ai xóa, ai chia sẻ theo thời gian thực.</p>
                    </div>

                    <div class="feature-card" data-aos="fade-up" data-aos-delay="200">
                        <div class="feature-icon-wrapper bg-green-subtle text-success" style="background: #ecfdf5;">
                            <i class="bi bi-shield-lock-fill"></i>
                        </div>
                        <h4 class="fw-bold mb-2">Chia sẻ & Bảo mật dữ liệu</h4>
                        <p class="text-sub">Cơ chế phân quyền chặt chẽ kết hợp tính năng chia sẻ an toàn qua Email. Dữ liệu của bạn được bảo vệ với quy trình xác thực Identity hiện đại.</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="pricing" class="py-5 bg-light bg-opacity-50">
            <div class="container py-5">
                <div class="text-center mb-5" data-aos="fade-up">
                    <span class="text-primary fw-bold small text-uppercase tracking-wide">Gói cước linh hoạt</span>
                    <h2 class="fw-bolder mt-2">Mở rộng không gian lưu trữ</h2>
                    <p class="text-sub">Trải nghiệm trọn vẹn mọi tính năng DocNest ở tất cả các gói.</p>
                </div>

                <div class="row g-4 align-items-center justify-content-center">
                    <div class="col-lg-5" data-aos="fade-up" data-aos-delay="0">
                        <div class="pricing-card h-100">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-bold text-muted mb-0">Standard</h5>
                            </div>
                            <div class="display-5 fw-bold mb-3">$0<span class="fs-6 text-muted fw-normal">/tháng</span></div>
                            <p class="text-sub mb-4 small">Gói cơ bản cho cá nhân với 15GB lưu trữ miễn phí trọn đời.</p>

                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-dark w-100 rounded-pill fw-bold mb-4">Đăng ký miễn phí</a>

                            <div class="border-top pt-4">
                                <ul class="list-unstyled check-list small">
                                    <li class="mb-3">
                                        <i class="bi bi-hdd-fill text-secondary fs-5 me-2"></i>
                                        <span class="fw-bold text-dark fs-5">15 GB</span>
                                        <span class="ms-1">Lưu trữ</span>
                                    </li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Truy cập trọn vẹn tính năng</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Sử dụng trên mọi thiết bị</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-5" data-aos="fade-up" data-aos-delay="200">
                        <div class="pricing-card h-100">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="fw-bold text-dark mb-0">Premium</h5>
                            </div>

                            <div class="display-5 fw-bold mb-3">$29<span class="fs-6 text-muted fw-normal">/tháng</span></div>
                            <p class="text-sub mb-4 small">Tối đa hóa khả năng lưu trữ của bạn với 100GB.</p>

                            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-glow w-100 rounded-pill fw-bold mb-4">Nâng cấp ngay</a>

                            <div class="border-top pt-4">
                                <ul class="list-unstyled check-list small">
                                    <li class="mb-3">
                                        <i class="bi bi-database-fill-gear text-warning fs-5 me-2"></i>
                                        <span class="fw-bold text-dark fs-5">100 GB</span>
                                        <span class="ms-1">Lưu trữ</span>
                                    </li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> <strong>Gấp nhiều lần</strong> gói Standard</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Truy cập trọn vẹn tính năng</li>
                                    <li><i class="bi bi-check-circle-fill text-success"></i> Ưu tiên tài nguyên hệ thống</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-5">
            <div class="container py-4">
                <div class="rounded-5 p-5 text-center position-relative overflow-hidden" data-aos="zoom-in"
                     style="background: linear-gradient(135deg, #1e1b4b 0%, #312e81 100%); color: white;">
                    <div class="position-relative z-2">
                        <h2 class="display-6 fw-bold mb-3">Sẵn sàng trải nghiệm?</h2>
                        <p class="text-white-50 mb-4 mx-auto" style="max-width: 500px;">
                            Đăng ký ngay hôm nay để nhận 15GB miễn phí vĩnh viễn. 
                        </p>
                        <a class="btn btn-light text-primary rounded-pill px-5 py-3 fw-bold shadow-lg border-0 hover-scale"
                           asp-area="Identity" asp-page="/Account/Register">
                            Tạo tài khoản miễn phí
                        </a>
                    </div>
                    <div class="position-absolute top-0 end-0 bg-white opacity-10 rounded-circle" style="width: 200px; height: 200px; margin: -50px;"></div>
                    <div class="position-absolute bottom-0 start-0 bg-primary opacity-25 rounded-circle" style="width: 300px; height: 300px; margin: -100px;"></div>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <div class="container">
            <div class="row g-5 mb-5">
                <div class="col-lg-4">
                    <a class="d-flex align-items-center gap-2 mb-3 text-decoration-none" href="#">
                        <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="bi bi-cloud-fill fs-6"></i>
                        </div>
                        <span class="text-dark fw-bold fs-4 tracking-tight">DocNest</span>
                    </a>
                    
                </div>
                <div class="col-6 col-lg-2 offset-lg-2">
                    <h6 class="fw-bold mb-3">Sản phẩm</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2 small">
                        <li><a href="#" class="text-decoration-none text-sub hover-primary">Tính năng</a></li>
                        <li><a href="#" class="text-decoration-none text-sub hover-primary">Bảo mật</a></li>
                        <li><a href="#" class="text-decoration-none text-sub hover-primary">Doanh nghiệp</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="fw-bold mb-3">Hỗ trợ</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2 small">
                        <li><a href="#" class="text-decoration-none text-sub hover-primary">Trung tâm trợ giúp</a></li>
                        <li><a href="#" class="text-decoration-none text-sub hover-primary">Tài liệu API</a></li>
                        <li><a href="#" class="text-decoration-none text-sub hover-primary">Trạng thái hệ thống</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-top pt-4 text-center">
                <p class="text-sub small mb-0">&copy; 2025 DocNest Inc. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            once: true, // Chỉ chạy animation 1 lần khi cuộn xuống
            offset: 50,
            duration: 800,
            easing: 'ease-out-cubic',
        });
    </script>
</body>
</html>