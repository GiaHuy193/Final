@using WebDocumentManagement_FileSharing.Helpers
@model WebDocumentManagement_FileSharing.Models.FileSystemViewModel

@{
    ViewData["Title"] = "Trang chủ";
    ViewData["ForceShowSidebar"] = true;
}

@functions {
    // HÀM: Lấy màu Gradient dựa trên ID folder
    public string GetFolderGradient(int id)
    {
        var gradients = new[]
        {
            "linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)", // Tím Mộng Mơ
            "linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%)", // Xanh Ngọc
            "linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%)", // Tím Xanh Nhạt
            "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)", // Hồng Đậm
            "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)", // Xanh Biển Neon
            "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)", // Xanh Lá Mạ
            "linear-gradient(135deg, #fa709a 0%, #fee140 100%)", // Cam Hồng
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)", // Tím Đậm
            "linear-gradient(135deg, #89f7fe 0%, #66a6ff 100%)", // Xanh Mát
            "linear-gradient(135deg, #c471f5 0%, #fa71cd 100%)", // Tím Hồng
            "linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%, #fecfef 100%)", // Hồng Phấn
        };
        return gradients[Math.Abs(id) % gradients.Length];
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary-color: #3b82f6;
        --primary-hover-color: #2563eb;
        --card-hover-shadow: 0 10px 20px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }

    /* --- UTILITIES --- */
    .cursor-pointer {
        cursor: pointer;
    }

    .dropdown-toggle::after {
        display: none !important;
    }

    /* --- FOLDER CARD --- */
    .folder-card {
        background-color: #ffffff;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        transition: transform 0.2s, box-shadow 0.2s;
        height: 100%;
        display: flex;
        flex-direction: column;
        padding: 0;
    }

        .folder-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px -6px rgba(0, 0, 0, 0.15);
            border-color: rgba(0,0,0,0.1);
        }

    .folder-cover {
        height: 90px;
        width: 100%;
        position: relative;
    }

        .folder-cover::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(120deg, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0.05) 40%, rgba(255,255,255,0) 100%);
            pointer-events: none;
        }

    .folder-body {
        padding: 12px 16px;
        background-color: #fff;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .folder-name {
        font-weight: 600;
        font-size: 0.95rem;
        color: #1e293b;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        margin-bottom: 2px;
    }

    .folder-meta {
        font-size: 0.75rem;
        color: #94a3b8;
    }

    /* FOLDER OPTION BUTTON */
    .folder-option-btn {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255,255,255,0.3);
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        cursor: pointer;
    }

        .folder-option-btn:hover {
            background: #ffffff;
            color: #000;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            transform: scale(1.05);
        }

    /* --- FILE CARD --- */
    .file-card {
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.2s;
        height: 100%;
        display: flex;
        flex-direction: column;
        background: white;
        position: relative;
    }

        .file-card:hover {
            box-shadow: var(--card-hover-shadow);
            border-color: rgba(0,0,0,0.15);
            transform: translateY(-2px);
        }

    .file-preview-area {
        height: 140px;
        background-color: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .file-preview-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }

    .file-card:hover .file-preview-img {
        transform: scale(1.05);
    }

    .file-card-body {
        padding: 0.75rem 1rem;
        flex-grow: 1;
        position: relative;
    }

    .file-name {
        font-size: 0.9rem;
        font-weight: 500;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-decoration: none;
        color: #334155;
        margin-bottom: 0.25rem;
        line-height: 1.4;
    }

    .file-option-btn {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 30px;
        height: 30px;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(4px);
        border-radius: 50%;
        border: none;
        color: #64748b;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 5;
        transition: all 0.2s;
    }

        .file-option-btn:hover {
            background: #fff;
            color: var(--bs-primary);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    /* --- TABLE LIST --- */
    .custom-table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
    }

        .custom-table thead th {
            border-bottom: 1px solid #e2e8f0;
            background-color: transparent;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #64748b;
            padding: 1rem;
            font-weight: 600;
        }

        .custom-table tbody tr {
            transition: background-color 0.2s;
        }

            .custom-table tbody tr:hover {
                background-color: #f8fafc;
            }

        .custom-table td {
            border-bottom: 1px solid #f1f5f9;
            padding: 1rem;
            vertical-align: middle;
            font-size: 0.9rem;
            color: #334155;
        }

        .custom-table tr:last-child td {
            border-bottom: none;
        }

    .table-action-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: none;
        background: transparent;
        color: #64748b;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

        .table-action-btn:hover {
            background-color: rgba(0,0,0,0.05);
            color: var(--bs-primary);
        }

    /* --- TOGGLES --- */
    .view-toggle-group .btn {
        border: 1px solid #e2e8f0;
        color: #64748b;
        padding: 0.4rem 0.6rem;
    }

        .view-toggle-group .btn.active {
            background-color: #e0e7ff;
            color: #4f46e5;
            border-color: #c7d2fe;
        }

    .section-toggle i {
        transition: transform 0.18s ease;
    }

    .section-toggle[aria-expanded="false"] i {
        transform: rotate(-90deg);
    }
</style>

<div class="container-fluid py-4 px-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5">
        <div>
            <h2 class="fw-bold mb-1 text-dark">Trang chủ</h2>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm d-flex align-items-center mb-4 fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2 fs-5"></i>
            <div>@TempData["Message"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4 fade show" role="alert">
            <i class="bi bi-exclamation-circle-fill me-2 fs-5"></i>
            <div>@TempData["Error"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-5">
        <h5 class="fw-bold text-uppercase text-secondary small mb-3 d-flex align-items-center justify-content-between">
            <span class="d-flex align-items-center gap-2">Thư mục </span>
            <button class="btn btn-sm btn-light section-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#foldersContent" aria-expanded="true" aria-controls="foldersContent" title="Thu gọn/Hiện">
                <i class="bi bi-chevron-down"></i>
            </button>
        </h5>

        <div id="foldersContent" class="collapse show">
            <div class="row g-3">
                @if (Model?.Folders != null && Model.Folders.Any())
                {
                    foreach (var f in Model.Folders)
                    {
                        <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                            <div class="folder-card position-relative">
                                <div class="dropdown position-absolute" style="top: 10px; right: 10px; z-index: 20;">
                                    <button class="folder-option-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3">
                                        <li><a class="dropdown-item" href="@Url.Action("Download", "Folders", new { id = f.Id })"><i class="bi bi-download me-2"></i>Tải xuống</a></li>
                                        <li><a class="dropdown-item rename-folder-trigger" href="#" data-id="@f.Id" data-name="@f.Name" data-bs-toggle="modal" data-bs-target="#renameModal"><i class="bi bi-pencil me-2"></i>Đổi tên</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item folder-star-toggle" href="#" data-id="@f.Id"><i class="bi bi-star me-2"></i>Gắn sao</a></li>
                                        <li><a class="dropdown-item share-trigger" href="#" data-id="@f.Id" data-title="@f.Name" data-type="folder"><i class="bi bi-share me-2"></i>Chia sẻ</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Details", "Folders", new { id = f.Id })"><i class="bi bi-info-circle me-2"></i>Chi tiết</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item text-danger folder-delete-btn" href="#" data-id="@f.Id"><i class="bi bi-trash me-2"></i>Xóa</a></li>
                                    </ul>
                                </div>

                                <a asp-controller="Documents" asp-action="Index" asp-route-folderId="@f.Id" class="text-decoration-none d-block">
                                    <div class="folder-cover" style="background: @GetFolderGradient(f.Id);"></div>
                                </a>

                                <a asp-controller="Documents" asp-action="Index" asp-route-folderId="@f.Id" class="text-decoration-none folder-body d-block">
                                    <span class="folder-name" title="@f.Name">@f.Name</span>
                                    <span class="folder-meta">@f.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="d-flex flex-column align-items-center justify-content-center p-5 bg-white rounded-4 border border-dashed">
                            <i class="bi bi-folder-plus fs-1 text-secondary opacity-50 mb-2"></i>
                            <span class="text-muted fw-medium">Chưa có thư mục nào</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold text-uppercase text-secondary small mb-0 d-flex align-items-center gap-2"> Tệp tin gần đây </h5>

        <div class="d-flex align-items-center">
            <div class="btn-group view-toggle-group me-2" role="group">
                <button type="button" class="btn rounded-start-pill" id="listFilesBtn" title="Danh sách">
                    <i class="bi bi-list-ul"></i>
                </button>
                <button type="button" class="btn rounded-end-pill" id="gridFilesBtn" title="Lưới">
                    <i class="bi bi-grid-fill"></i>
                </button>
            </div>
            <button class="btn btn-sm btn-light section-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#recentContent" aria-expanded="true" aria-controls="recentContent" title="Thu gọn/Hiện">
                <i class="bi bi-chevron-down"></i>
            </button>
        </div>
    </div>

    <div id="recentContent" class="collapse show">

        <div id="filesGrid" class="row g-3 mb-4" style="display:none">
            @if (Model?.Documents != null && Model.Documents.Any())
            {
                foreach (var d in Model.Documents)
                {
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <div class="file-card position-relative">
                            <div class="dropdown position-absolute" style="top: 8px; right: 8px; z-index: 10;">
                                <button class="file-option-btn" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" asp-controller="Documents" asp-action="Download" asp-route-id="@d.Id"><i class="bi bi-download me-2"></i>Tải xuống</a></li>
                                    <li><a class="dropdown-item rename-doc-trigger" href="#" data-id="@d.Id" data-name="@d.FileName" data-bs-toggle="modal" data-bs-target="#renameModal"><i class="bi bi-pencil me-2"></i>Đổi tên</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item document-star-toggle" href="#" data-id="@d.Id"><i class="bi bi-star me-2"></i>Gắn sao</a></li>
                                    <li><a class="dropdown-item share-trigger" href="#" data-id="@d.Id" data-title="@d.FileName" data-type="document"><i class="bi bi-share me-2"></i>Chia sẻ</a></li>
                                    <li><a class="dropdown-item" asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id"><i class="bi bi-info-circle me-2"></i>Chi tiết</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger document-delete-btn" href="#" data-id="@d.Id" data-name="@d.FileName"><i class="bi bi-trash me-2"></i>Xóa</a></li>
                                </ul>
                            </div>

                            <div class="file-preview-area">
                                <a asp-controller="Documents" asp-action="Open" asp-route-id="@d.Id" target="_blank" class="w-100 h-100 d-flex justify-content-center align-items-center text-decoration-none">
                                    @{
                                        var previewType = FilePreviewHelper.GetPreviewType(d.FileName, d.ContentType);
                                        if (previewType == FilePreviewType.Image)
                                        {
                                            <img src="@Url.Action("Open", "Documents", new { id = d.Id })" class="file-preview-img" loading="lazy" />
                                        }
                                        else
                                        {
                                            var iconClass = "bi-file-earmark-text";
                                            var iconColor = "text-secondary";
                                            var lower = (d.FileName ?? "").ToLowerInvariant();

                                            if (lower.EndsWith(".pdf")) { iconClass = "bi-file-earmark-pdf"; iconColor = "text-danger"; }
                                            else if (lower.EndsWith(".docx") || lower.EndsWith(".doc")) { iconClass = "bi-file-earmark-word"; iconColor = "text-primary"; }
                                            else if (lower.EndsWith(".xlsx") || lower.EndsWith(".xls")) { iconClass = "bi-file-earmark-excel"; iconColor = "text-success"; }

                                            <i class="bi @iconClass @iconColor" style="font-size: 3rem;"></i>
                                        }
                                    }
                                </a>
                            </div>

                            <div class="file-card-body">
                                <a asp-controller="Documents" asp-action="Open" asp-route-id="@d.Id" target="_blank" class="file-name" title="@d.FileName">
                                    @d.FileName
                                </a>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <span class="text-muted small" style="font-size: 0.75rem">@d.UploadedDate.ToString("dd/MM")</span>
                                    <span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill fw-normal" style="font-size: 0.65rem">
                                        @(Math.Round(d.FileSize / 1024.0, 1)) KB
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="text-center py-5 text-muted">Không có tệp tin nào gần đây</div>
                </div>
            }
        </div>

        <div id="filesArea" class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table custom-table mb-0">
                    <thead>
                        <tr>
                            <th style="padding-left: 1.5rem">Tên tệp</th>
                            <th>Ngày tải lên</th>
                            <th>Kích thước</th>
                            <th class="text-end" style="padding-right: 1.5rem">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Documents != null && Model.Documents.Any())
                        {
                            foreach (var d in Model.Documents)
                            {
                                <tr>
                                    <td style="padding-left: 1.5rem">
                                        <div class="d-flex align-items-center">
                                            @{
                                                var iconClass = "bi-file-earmark-text";
                                                var iconColor = "text-secondary";
                                                var isImage = false;
                                                var lower = (d.FileName ?? "").ToLowerInvariant();
                                                if (lower.EndsWith(".pdf")) { iconClass = "bi-file-earmark-pdf"; iconColor = "text-danger"; }
                                                else if (lower.EndsWith(".docx") || lower.EndsWith(".doc")) { iconClass = "bi-file-earmark-word"; iconColor = "text-primary"; }
                                                else if (lower.EndsWith(".xlsx") || lower.EndsWith(".xlsx")) { iconClass = "bi-file-earmark-excel"; iconColor = "text-success"; }
                                                else if (lower.EndsWith(".jpg") || lower.EndsWith(".jpeg") || lower.EndsWith(".png") || lower.EndsWith(".gif") || lower.EndsWith(".webp")) { iconClass = "bi-file-earmark-image"; isImage = true; }
                                            }
                                            @if (isImage)
                                            {
                                                <i class="bi @iconClass text-dark fs-4 me-3" aria-hidden="true"></i>
                                            }
                                            else
                                            {
                                                <i class="bi @iconClass @iconColor fs-4 me-3"></i>
                                            }
                                            <div>
                                                <a href="@Url.Action("Open", "Documents", new { id = d.Id })" target="_blank" class="fw-medium text-decoration-none text-dark">@d.FileName</a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-muted">@d.UploadedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-secondary">@(Math.Round(d.FileSize / 1024.0, 1)) KB</td>
                                    <td class="text-end" style="padding-right: 1.5rem">
                                        <div class="dropdown">
                                            <button class="table-action-btn ms-auto" data-bs-toggle="dropdown">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                                <li><a class="dropdown-item" asp-controller="Documents" asp-action="Download" asp-route-id="@d.Id"><i class="bi bi-download me-2"></i>Tải xuống</a></li>
                                                <li><a class="dropdown-item rename-doc-trigger" href="#" data-id="@d.Id" data-name="@d.FileName" data-bs-toggle="modal" data-bs-target="#renameModal"><i class="bi bi-pencil me-2"></i>Đổi tên</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item document-star-toggle" href="#" data-id="@d.Id"><i class="bi bi-star me-2"></i>Gắn sao</a></li>
                                                <li><a class="dropdown-item share-trigger" href="#" data-id="@d.Id" data-title="@d.FileName" data-type="document"><i class="bi bi-share me-2"></i>Chia sẻ</a></li>
                                                <li><a class="dropdown-item" asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id"><i class="bi bi-info-circle me-2"></i>Chi tiết</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item text-danger document-delete-btn" href="#" data-id="@d.Id" data-name="@d.FileName"><i class="bi bi-trash me-2"></i>Xóa</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">Không có tệp tin nào</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="renameModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">Đổi tên</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="renameForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="id" id="rename-id" />
                    <input type="hidden" id="rename-type" />
                    <div class="mb-3">
                        <label class="form-label text-secondary small fw-bold">Tên mới</label>
                        <input type="text" name="newName" id="rename-newName" class="form-control form-control-lg bg-light border-0" required />
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ShareModal" />

<footer class="mt-auto py-4">
    <div class="text-center">
        <p class="text-secondary mb-0" style="font-size: 0.75rem; opacity: 0.6; letter-spacing: 0.5px;">
            &copy; 2026 DocNest &bull; Hệ thống quản lý tài liệu thông minh 
        </p>
    </div>
</footer>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            'use strict';

            // --- 1. RENAME LOGIC ---
            var renameForm = document.getElementById('renameForm');
            var renameType = document.getElementById('rename-type');

            // Trigger cho Folder
            document.querySelectorAll('.rename-folder-trigger').forEach(el => {
                el.addEventListener('click', function() {
                    document.getElementById('rename-id').value = this.getAttribute('data-id');
                    document.getElementById('rename-newName').value = this.getAttribute('data-name');
                    renameType.value = 'folder';
                    renameForm.action = '@Url.Action("Rename", "Folders")';
                });
            });

            // Trigger cho Document
            document.querySelectorAll('.rename-doc-trigger').forEach(el => {
                el.addEventListener('click', function() {
                    document.getElementById('rename-id').value = this.getAttribute('data-id');
                    document.getElementById('rename-newName').value = this.getAttribute('data-name');
                    renameType.value = 'document';
                    renameForm.action = '@Url.Action("Rename", "Documents")';
                });
            });

            // --- 2. DELETE LOGIC ---
            document.querySelectorAll('.document-delete-btn').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = btn.getAttribute('data-id');
                    var name = btn.getAttribute('data-name');
                    if (!id || !confirm('Chuyển "' + name + '" vào thùng rác?')) return;

                    fetch('@Url.Action("Delete", "Documents")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value },
                        body: new URLSearchParams({ id: id, confirmAction: 'trash' })
                    }).then(r => { if(r.ok) location.reload(); else alert('Lỗi xóa file'); });
                });
            });

            document.querySelectorAll('.folder-delete-btn').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = btn.getAttribute('data-id');
                    if (!id || !confirm('Xóa thư mục này?')) return;
                    fetch('@Url.Action("Delete", "Folders")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value },
                        body: new URLSearchParams({ id: id })
                    }).then(function(r) { if(r.ok) location.reload(); else alert('Lỗi xóa thư mục'); });
                });
            });

            // --- 3. STAR TOGGLE ---
            document.querySelectorAll('.document-star-toggle, .folder-star-toggle').forEach(function(el){
                el.addEventListener('click', function(e){
                    e.preventDefault();
                    var id = el.getAttribute('data-id');
                    var isFolder = el.classList.contains('folder-star-toggle');
                    var url = isFolder ? '@Url.Action("ToggleFolder", "Star")' : '@Url.Action("ToggleDocument", "Star")';
                    if (!id) return;
                    fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value },
                        body: new URLSearchParams({ id: id })
                    }).then(r => r.json()).then(j => {
                        if (j && j.success) location.reload(); else alert('Lỗi');
                    }).catch(() => alert('Lỗi kết nối'));
                });
            });

            // --- 4. VIEW MODE TOGGLE ---
            (function () {
                var filesArea = document.getElementById('filesArea');
                var filesGrid = document.getElementById('filesGrid');
                var gridBtn = document.getElementById('gridFilesBtn');
                var listBtn = document.getElementById('listFilesBtn');

                function setMode(mode) {
                    if (mode === 'grid') {
                        if (filesGrid) filesGrid.style.display = '';
                        if (filesArea) filesArea.style.display = 'none';
                        if (gridBtn) gridBtn.classList.add('active');
                        if (listBtn) listBtn.classList.remove('active');
                    } else {
                        if (filesGrid) filesGrid.style.display = 'none';
                        if (filesArea) filesArea.style.display = '';
                        if (listBtn) listBtn.classList.add('active');
                        if (gridBtn) gridBtn.classList.remove('active');
                    }
                    try { localStorage.setItem('files_view_mode', mode); } catch (e) { }
                }

                if (gridBtn && listBtn) {
                    gridBtn.addEventListener('click', function () { setMode('grid'); });
                    listBtn.addEventListener('click', function () { setMode('list'); });
                    var saved = null; try { saved = localStorage.getItem('files_view_mode'); } catch (e) { }
                    setMode(saved === 'grid' ? 'grid' : 'list');
                }
            })();
        });
    </script>
}