@using WebDocumentManagement_FileSharing.Helpers
@model WebDocumentManagement_FileSharing.Models.FileSystemViewModel

@{
    ViewData["Title"] = "Trang chủ DocNest của tôi";
    ViewData["ForceShowSidebar"] = true;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    /* 1. Xóa mũi tên mặc định của dropdown */
    .dropdown-toggle::after {
        display: none !important;
    }

    /* 2. Cấu hình nút 3 chấm (Three-dots button) */
    .folder-action-btn {
        background: transparent !important;
        border: none !important;
        box-shadow: none !important;
        padding: 0.35rem;
        color: var(--text-secondary) !important;
    }

        .folder-action-btn:hover {
            background-color: var(--bg-active) !important;
            border-radius: 50%;
            color: var(--primary-color) !important;
        }

    /* 3. Bố cục thẻ Folder (Folder Card) */
    .folder-card {
        min-height: 110px;
        position: relative; /* Để định vị nút card-actions */
    }

        /* Đưa nút thao tác lên góc trên bên phải */
        .folder-card .card-actions {
            position: absolute;
            top: 8px;
            right: 8px;
            z-index: 10;
        }

        /* 4. Đồng bộ màu chữ theo Theme */
        .folder-card a, .folder-card a .fw-semibold {
            color: var(--text-color) !important;
        }

    /* Đảm bảo dropdown không bị che khuất trong table */
    .table-responsive {
        overflow: visible !important;
    }

    /* Three-dots dropdown without border */
    .dot-dropdown {
        background: transparent !important;
        border: none !important;
        box-shadow: none !important;
        padding: 0.25rem !important;
        color: var(--text-secondary) !important;
    }

    .dot-dropdown:focus, .dot-dropdown:active {
        outline: none !important;
        box-shadow: none !important;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3> Chào mừng bạn đến với trang chủ DocNest</h3>
    </div>
    <h5 class="mb-3">Truy cập nhanh</h5>
    @* Hiển thị thông báo *@
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* PHẦN HIỂN THỊ THƯ MỤC *@
    <div class="row g-3 mb-4">
        @if (Model?.Folders != null && Model.Folders.Any())
        {
            foreach (var f in Model.Folders)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="card shadow-sm folder-card">

                        @* Bố cục nút 3 chấm ở góc phải *@
                        <div class="card-actions">
                            <div class="dropdown">
                                <button class="dropdown-toggle folder-action-btn" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Download", "Folders", new { id = f.Id })">
                                            <i class="bi bi-download me-2"></i> Tải xuống
                                        </a>
                                    </li>
                                   
                                    <li>
                                        <a class="dropdown-item" asp-controller="Folders" asp-action="Rename" asp-route-id="@f.Id">
                                            <i class="bi bi-pencil-square me-2 text-info"></i> Đổi tên 
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item folder-star-toggle" href="#" data-id="@f.Id" data-type="folder">
                                            <i class="bi bi-star me-2 text-warning"></i> Gắn sao
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item share-trigger" href="#" data-id="@f.Id" data-title="@f.Name" data-type="folder">
                                            <i class="bi bi-share-fill me-2 text-primary"></i> Chia sẻ
                                        </a>
                                    </li>
                                     <li>
                                         <a class="dropdown-item text-danger" asp-controller="Folders" asp-action="Delete" asp-route-id="@f.Id">
                                            <i class="bi bi-trash me-2"></i> Chuyển vào thùng rác
                                        </a>
                                     </li>
                                </ul>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <a asp-controller="Documents" asp-action="Index" asp-route-folderId="@f.Id" class="text-decoration-none flex-grow-1 mb-2">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-folder-fill text-warning fs-2"></i>
                                    <div class="fw-semibold text-truncate" title="@f.Name">@f.Name</div>
                                </div>
                                <div class="text-muted small mt-2">
                                    @f.CreatedDate.ToString("dd/MM/yyyy")
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="p-5 text-center text-muted bg-body-tertiary rounded shadow-sm">Bạn chưa có thư mục nào</div>
            </div>
        }
    </div>

    @* PHẦN HIỂN THỊ TỆP GẦN ĐÂY *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Files gần đây</h5>
        <div class="btn-group btn-group-sm" role="group" aria-label="Files view toggle">
            <button type="button" class="btn btn-outline-secondary" id="listFilesBtn" title="Danh sách"><i class="bi bi-list"></i></button>
            <button type="button" class="btn btn-outline-secondary" id="gridFilesBtn" title="Lưới"><i class="bi bi-grid-3x3-gap-fill"></i></button>
        </div>
    </div>

    @* GRID VIEW (hidden by default) *@
    <div id="filesGrid" class="row g-3 mb-3" style="display:none">
        @if (Model?.Documents != null && Model.Documents.Any())
        {
            foreach (var d in Model.Documents)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="card shadow-sm file-card">
                        @* Card header: title (clickable) and dropdown button outside the preview link so dropdown works *@
                        <div class="card-header d-flex align-items-center justify-content-between py-2 px-3">
                            <div class="text-truncate fw-semibold" style="max-width:120px">
                                <a asp-controller="Documents" asp-action="Open" asp-route-id="@d.Id" target="_blank" class="text-decoration-none text-reset">@d.FileName</a>
                            </div>
                            <div>
                                <div class="dropdown">
                                    <button class="dropdown-toggle folder-action-btn p-0" data-bs-toggle="dropdown" aria-expanded="false" type="button">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Documents" asp-action="Download" asp-route-id="@d.Id">
                                                <i class="bi bi-download me-2"></i> Tải xuống
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item" asp-controller="Documents" asp-action="Rename" asp-route-id="@d.Id">
                                                <i class="bi bi-pencil-square me-2 text-info"></i> Đổi tên
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item document-star-toggle" href="#" data-id="@d.Id" data-type="document">
                                                <i class="bi bi-star me-2 text-warning"></i> Gắn sao
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item share-trigger" href="#" data-id="@d.Id" data-title="@d.FileName" data-type="document">
                                                <i class="bi bi-share-fill me-2 text-primary"></i> Chia sẻ
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-controller="Documents" asp-action="Delete" asp-route-id="@d.Id">
                                                <i class="bi bi-trash me-2"></i> Chuyển vào thùng rác
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id">
                                                <i class="bi bi-eye me-2"></i> Chi tiết
                                            </a>
                                        </li>                                      
                                    </ul>
                                </div>
                            </div>
                        </div>
                        @* Preview (clicking preview opens file) *@
                        <a asp-controller="Documents" asp-action="Open" asp-route-id="@d.Id" target="_blank" class="text-decoration-none text-reset">
                            <div class="card-body p-3" style="min-height:100px; display:flex; align-items:center; justify-content:center;">
                                @{
                                    var previewType = FilePreviewHelper.GetPreviewType(d.FileName, d.ContentType);
                                    if (previewType == FilePreviewType.Image)
                                    {
                                        <img src="@Url.Action("Open", "Documents", new { id = d.Id })" alt="preview" style="max-width:100%; max-height:80px; object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-file-earmark-text fs-1 text-secondary"></i>
                                    }
                                }
                            </div>
                        </a>
                    </div>
                </div>
            }
        }
    </div>

    <div id="filesArea" class="table-responsive shadow-sm bg-body rounded border">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:40%">Tên</th>
                    <th>Ngày tải</th>
                    <th>Kích thước</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Documents != null && Model.Documents.Any())
                {
                    foreach (var d in Model.Documents)
                    {
                        <tr>
                            <td>
                                <i class="bi bi-file-earmark-text text-primary me-2 fs-5"></i>
                                @{
                                    var previewType = FilePreviewHelper.GetPreviewType(d.FileName, d.ContentType);
                                    if (previewType != FilePreviewType.NotSupported)
                                    {
                                        <a href="@Url.Action("Open", "Documents", new { id = d.Id })" target="_blank" class="fw-normal text-decoration-none">@d.FileName</a>
                                    }
                                    else
                                    {
                                        <span class="fw-normal text-muted">@d.FileName</span>
                                        <span class="badge bg-secondary ms-2 small">Không hỗ trợ preview</span>
                                    }
                                }
                            </td>
                            <td>@d.UploadedDate.ToString("dd/MM/yyyy")</td>
                            <td class="text-secondary">@(Math.Round(d.FileSize / 1024.0, 1)) KB</td>
                            <td class="text-end">
                                <div class="dropdown">
                                    <button class="dropdown-toggle folder-action-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Documents" asp-action="Download" asp-route-id="@d.Id">
                                                <i class="bi bi-download me-2"></i> Tải xuống
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Documents" asp-action="Rename" asp-route-id="@d.Id">
                                                <i class="bi bi-pencil-square me-2 text-info"></i> Đổi tên
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item document-star-toggle" href="#" data-id="@d.Id" data-type="document">
                                                <i class="bi bi-star me-2 text-warning"></i> Gắn sao
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item share-trigger" href="#" data-id="@d.Id" data-title="@d.FileName" data-type="document">
                                                <i class="bi bi-share-fill me-2 text-primary"></i> Chia sẻ
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-controller="Documents" asp-action="Delete" asp-route-id="@d.Id">
                                                <i class="bi bi-trash me-2"></i> Chuyển vào thùng rác
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id">
                                                <i class="bi bi-eye me-2"></i> Chi tiết
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">Không có tệp gần đây</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* Include share modal so .share-trigger opens it on this page *@
<partial name="_ShareModal" />

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            'use strict';

            function readAntiForgeryToken(form) {
                try {
                    if (form) {
                        var inp = form.querySelector('input[name="__RequestVerificationToken"]');
                        if (inp) return inp.value;
                    }
                    var pageInp = document.querySelector('input[name="__RequestVerificationToken"]');
                    return pageInp ? pageInp.value : '';
                } catch (e) { return ''; }
            }

            // helper to show transient notice (uses bootstrap alert styles)
            function showNotice(message, variant) {
                variant = variant || 'success';
                try {
                    var containerId = 'transient-notice-container';
                    var container = document.getElementById(containerId);
                    if (!container) {
                        container = document.createElement('div');
                        container.id = containerId;
                        container.style.position = 'fixed';
                        container.style.top = '16px';
                        container.style.right = '16px';
                        container.style.zIndex = 4000;
                        document.body.appendChild(container);
                    }

                    var alert = document.createElement('div');
                    alert.className = 'alert alert-' + (variant === 'error' ? 'danger' : variant) + ' shadow';
                    alert.style.minWidth = '220px';
                    alert.style.marginBottom = '8px';
                    alert.textContent = message;

                    container.appendChild(alert);

                    setTimeout(function () {
                        try { alert.classList.add('fade'); alert.style.transition = 'opacity 0.4s'; alert.style.opacity = '0'; } catch (e) { }
                        setTimeout(function () { try { container.removeChild(alert); } catch (e) { } }, 450);
                    }, 2500);
                } catch (e) { console.error('showNotice error', e); }
            }

            // Document star toggle - works for buttons with class .document-star-toggle
            // Star toggle for documents
            document.querySelectorAll('.document-star-toggle').forEach(function(el){
                el.addEventListener('click', function(e){
                    e.preventDefault();
                    var id = el.getAttribute('data-id');
                    if (!id) return;
                    fetch('@Url.Action("ToggleDocument", "Star")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value },
                        body: new URLSearchParams({ id: id })
                    }).then(function(r){ return r.json(); }).then(function(j){ if (j && j.success) { alert(j.isStarred ? 'Đã gắn sao' : 'Bỏ gắn sao'); } else alert('Lỗi'); }).catch(function(){ alert('Lỗi'); });
                });
            });

            // Star toggle for folders (on Home page folder dropdown)
            document.querySelectorAll('.folder-star-toggle').forEach(function(el){
                el.addEventListener('click', function(e){
                    e.preventDefault();
                    var id = el.getAttribute('data-id');
                    if (!id) return;
                    fetch('@Url.Action("ToggleFolder", "Star")', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value },
                        body: new URLSearchParams({ id: id })
                    }).then(function(r){ return r.json(); }).then(function(j){ if (j && j.success) { alert(j.isStarred ? 'Đã gắn sao thư mục' : 'Bỏ gắn sao thư mục'); } else alert('Lỗi'); }).catch(function(){ alert('Lỗi'); });
                });
            });

            // Document delete (quick confirm -> move to trash). Works when no modal present.
            document.querySelectorAll('.document-delete-btn').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = btn.getAttribute('data-id');
                    var name = btn.getAttribute('data-name') || 'tệp tin này';
                    if (!id) return;

                    if (!confirm('Bạn có chắc muốn chuyển vào thùng rác ' + name + ' ?')) return;

                    var token = readAntiForgeryToken(btn.closest('form'));
                    fetch('@Url.Action("Delete", "Documents")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: new URLSearchParams({ id: id, confirmAction: 'trash' })
                    }).then(function (resp) {
                        if (resp.redirected) { window.location.href = resp.url; return; }
                        if (resp.ok) window.location.reload();
                        else resp.text().then(function (t) { alert('Xóa không thành công'); console.error(t); });
                    }).catch(function (err) { console.error(err); alert('Lỗi khi xóa'); });
                });
            });

            // Folder delete - keep existing behavior but ensure antiforgery
            document.querySelectorAll('.folder-delete-btn').forEach(function (btn) {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    var id = btn.getAttribute('data-id');
                    if (!id || !confirm('Bạn có chắc muốn xóa thư mục này?')) return;
                    var form = btn.closest('form');
                    var token = readAntiForgeryToken(form);
                    fetch('@Url.Action("Delete", "Folders")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: new URLSearchParams({ id: id })
                    }).then(function (resp) {
                        if (resp.redirected) window.location.href = resp.url;
                        else if (resp.ok) window.location.reload();
                        else resp.text().then(function (t) { alert('Xóa thư mục không thành công: ' + t); });
                    }).catch(function (err) { console.error(err); alert('Lỗi xóa thư mục'); });
                });
            });

            // Files view mode toggle (list <-> grid)
            (function () {
                var filesArea = document.getElementById('filesArea');
                var filesGrid = document.getElementById('filesGrid');
                var gridBtn = document.getElementById('gridFilesBtn');
                var listBtn = document.getElementById('listFilesBtn');

                function setMode(mode) {
                    if (mode === 'grid') {
                        if (filesGrid) filesGrid.style.display = '';
                        if (filesArea) filesArea.style.display = 'none';
                        if (gridBtn) gridBtn.classList.add('active');
                        if (listBtn) listBtn.classList.remove('active');
                    } else {
                        if (filesGrid) filesGrid.style.display = 'none';
                        if (filesArea) filesArea.style.display = '';
                        if (listBtn) listBtn.classList.add('active');
                        if (gridBtn) gridBtn.classList.remove('active');
                    }
                    try { localStorage.setItem('files_view_mode', mode); } catch (e) { }
                }

                if (gridBtn && listBtn) {
                    gridBtn.addEventListener('click', function () { setMode('grid'); });
                    listBtn.addEventListener('click', function () { setMode('list'); });
                    var saved = null; try { saved = localStorage.getItem('files_view_mode'); } catch (e) { }
                    setMode(saved === 'grid' ? 'grid' : 'list');
                }
            })();

        });
    </script>
}