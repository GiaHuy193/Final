@model WebDocumentManagement_FileSharing.Models.FileSystemViewModel
@{
    ViewData["Title"] = "Gắn sao";
}

<div class="container mt-4">
    <h3><i class="bi bi-star-fill text-warning"></i> Mục đã gắn sao</h3>

    <h5 class="mt-4">Thư mục</h5>
    <div class="row g-3 mb-4">
        @if (Model?.Folders != null && Model.Folders.Any())
        {
            foreach (var f in Model.Folders)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="card shadow-sm folder-card">
                        <div class="card-body d-flex flex-column">
                            <a asp-controller="Documents" asp-action="Index" asp-route-folderId="@f.Id" class="text-decoration-none flex-grow-1 mb-2">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="bi bi-folder-fill text-warning fs-2"></i>
                                    <div class="fw-semibold text-truncate">@f.Name</div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-muted">Không có thư mục được gắn sao.</div>
        }
    </div>

    <h5>Tệp</h5>
    <div class="table-responsive shadow-sm bg-white rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Tên</th>
                    <th>Ngày tải</th>
                    <th>Kích thước</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Documents != null && Model.Documents.Any())
                {
                    foreach (var d in Model.Documents)
                    {
                        <tr>
                            <td>
                                <i class="bi bi-file-earmark-text text-primary me-2 fs-5"></i>
                                <a href="@Url.Action("Open","Documents", new { id = d.Id })" target="_blank" class="text-decoration-none">@d.FileName</a>
                            </td>
                            <td>@d.UploadedDate.ToString("dd/MM/yyyy")</td>
                            <td>@(Math.Round(d.FileSize / 1024.0, 1)) KB</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-secondary" asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id"><i class="bi bi-eye"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">Không có tệp được gắn sao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
