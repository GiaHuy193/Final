@using System.Linq
@model WebDocumentManagement_FileSharing.Models.FileSystemViewModel

@{
    ViewData["Title"] = "Mục đã gắn sao";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    /* --- CLEAN WHITE THEME --- */
    :root {
        --bg-body: #f8f9fa;
        --bg-card: #ffffff;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --border-color: #e2e8f0;
        --primary-color: #3b82f6;
        --warning-color: #f59e0b;
    }

    body {
        background-color: var(--bg-body);
        color: var(--text-primary);
    }

    /* --- HEADER & TITLES (TEXT ONLY) --- */
    .page-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }

    /* Tiêu đề section (Thư mục, Tệp tin) */
    .section-title {
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--text-secondary);
        margin-bottom: 1rem;
        margin-top: 2rem;
        border-bottom: 1px solid transparent; /* Giữ khoảng cách chuẩn */
    }

    /* --- FOLDER CARD --- */
    .folder-card {
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        transition: all 0.2s ease-in-out;
        position: relative;
    }

        .folder-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
            border-color: #cbd5e1;
        }

    .folder-icon {
        font-size: 2rem;
        color: #fcd34d;
    }

    /* Nút bỏ sao trên folder */
    .unstar-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background: transparent;
        border: none;
        color: var(--warning-color);
        opacity: 0.6;
        transition: opacity 0.2s;
    }

        .unstar-btn:hover {
            opacity: 1;
            transform: scale(1.1);
        }

    /* --- FILE TABLE --- */
    .files-card {
        background-color: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
    }

    .table-custom {
        margin-bottom: 0;
    }

        .table-custom thead th {
            background-color: #f1f5f9;
            color: var(--text-secondary);
            font-weight: 600;
            font-size: 0.75rem;
            text-transform: uppercase;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
        }

        .table-custom tbody tr {
            transition: background 0.2s;
        }

            .table-custom tbody tr:hover {
                background-color: #f8fafc;
            }

        .table-custom td {
            padding: 1rem 1.5rem;
            vertical-align: middle;
            color: var(--text-primary);
            border-bottom: 1px solid var(--border-color);
        }

        .table-custom tbody tr:last-child td {
            border-bottom: none;
        }

    /* --- FILE ICON & ACTIONS --- */
    .file-icon-box {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        margin-right: 12px;
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
    }

    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid transparent;
        background: transparent;
        color: var(--text-secondary);
        transition: all 0.2s;
    }

        .action-btn:hover {
            background-color: #f1f5f9;
            color: var(--primary-color);
            border-color: #e2e8f0;
        }

        .action-btn.unstar-action:hover {
            color: var(--warning-color);
            background-color: #fffbeb;
            border-color: #fcd34d;
        }

    /* --- EMPTY STATE --- */
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--text-secondary);
        background-color: var(--bg-card);
        border-radius: 12px;
        border: 1px dashed var(--border-color);
    }
</style>

<div class="container-fluid py-4 px-4">

    <div class="page-header">
        <h3 class="page-title">Mục đã gắn sao</h3>
        <p class="text-secondary small mb-0">Truy cập nhanh vào các tệp và thư mục quan trọng của bạn.</p>
    </div>

    @if (Model?.Folders != null && Model.Folders.Any())
    {
        <h5 class="section-title">Thư mục</h5>
        <div class="row g-3 mb-5">
            @foreach (var f in Model.Folders)
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <div class="folder-card p-3 h-100 d-flex flex-column">
                        <button class="unstar-btn unstar-folder" data-id="@f.Id" title="Bỏ gắn sao">
                            <i class="bi bi-star-fill"></i>
                        </button>
                        <a asp-controller="Documents" asp-action="Index" asp-route-folderId="@f.Id" class="text-decoration-none flex-grow-1 text-center mt-2">
                            <i class="bi bi-folder-fill folder-icon mb-2 d-block"></i>
                            <span class="fw-semibold text-dark text-truncate d-block px-1" title="@f.Name">@f.Name</span>
                            <small class="text-muted" style="font-size: 0.7rem;">@f.CreatedDate.ToString("dd/MM/yyyy")</small>
                        </a>
                    </div>
                </div>
            }
        </div>
    }

    <h5 class="section-title">Tệp tin</h5>

    @if (Model?.Documents != null && Model.Documents.Any())
    {
        <div class="card files-card">
            <div class="table-responsive">
                <table class="table table-custom">
                    <thead>
                        <tr>
                            <th style="width: 40%">Tên tệp</th>
                            <th>Ngày tải lên</th>
                            <th>Kích thước</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.Documents)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @{
                                            var ext = System.IO.Path.GetExtension(d.FileName)?.ToLower();
                                            var iconClass = "bi-file-earmark-text text-secondary";
                                            if (ext == ".pdf") iconClass = "bi-file-earmark-pdf text-danger";
                                            else if (ext == ".docx" || ext == ".doc") iconClass = "bi-file-earmark-word text-primary";
                                            else if (ext == ".xlsx" || ext == ".xls") iconClass = "bi-file-earmark-excel text-success";
                                            else if (ext == ".jpg" || ext == ".png" || ext == ".jpeg") iconClass = "bi-file-earmark-image text-warning";
                                        }
                                        <div class="file-icon-box">
                                            <i class="bi @iconClass"></i>
                                        </div>
                                        <a href="@Url.Action("Open", "Documents", new { id = d.Id })" target="_blank" class="text-decoration-none fw-medium text-dark">
                                            @d.FileName
                                        </a>
                                    </div>
                                </td>
                                <td class="text-muted">@d.UploadedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-secondary">@(Math.Round(d.FileSize / 1024.0, 1)) KB</td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-1">
                                        <a asp-controller="Documents" asp-action="Details" asp-route-id="@d.Id" class="action-btn" title="Chi tiết">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@d.Id" class="action-btn" title="Tải xuống">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        <button class="action-btn unstar-action unstar-file" data-id="@d.Id" title="Bỏ gắn sao">
                                            <i class="bi bi-star-fill"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (Model?.Folders == null || !Model.Folders.Any())
    {
        <div class="empty-state">
            <div class="bg-light d-inline-flex p-3 rounded-circle mb-3">
                <i class="bi bi-star text-secondary fs-1 opacity-50"></i>
            </div>
            <h5>Chưa có mục gắn sao nào</h5>
            <p class="mb-0">Hãy gắn sao các thư mục và tệp tin quan trọng để truy cập nhanh tại đây.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Logic bỏ gắn sao
            function toggleStar(id, url) {
                if (!id) return;
                fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams({ id: id })
                }).then(r => r.json()).then(j => {
                    if (j && j.success) location.reload();
                    else alert('Lỗi xảy ra.');
                }).catch(err => console.error(err));
            }
            document.querySelectorAll('.unstar-folder').forEach(btn => {
                btn.addEventListener('click', function(e) { e.preventDefault(); toggleStar(this.getAttribute('data-id'), '@Url.Action("ToggleFolder", "Star")'); });
            });
            document.querySelectorAll('.unstar-file').forEach(btn => {
                btn.addEventListener('click', function(e) { e.preventDefault(); toggleStar(this.getAttribute('data-id'), '@Url.Action("ToggleDocument", "Star")'); });
            });
        });
    </script>
}